@page "/category/{categorySlug}/{subCategorySlug}/{productSlug}"
@model ProductDetailModel
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Title"] = $"{Model.Product?.Name} - {Model.Product?.CategoryName} | {companyName}";
    ViewData["Description"] = !string.IsNullOrEmpty(Model.Product?.Description) 
        ? $"{Model.Product.Name} - {Model.Product.Description.Substring(0, Math.Min(Model.Product.Description.Length, 150))}... | {Model.Product.CategoryName} - {Model.Product.SubCategoryName} | {companyName}"
        : $"{Model.Product?.Name} - {Model.Product?.CategoryName} - {Model.Product?.SubCategoryName} şişme oyun grubu. {companyName}'ta kaliteli şişme oyun parkı, şişme kaydırak, şişme havuz, şişme rodeo, top havuzu, iç mekan oyun parkları, trambolin, softplay oyuncaklar.";
    ViewData["Keywords"] = $"{Model.Product?.Name}, {Model.Product?.CategoryName}, {Model.Product?.SubCategoryName}, şişme oyun parkı, şişme kaydırak, şişme havuz, şişme rodeo, top havuzu, iç mekan oyun parkları, trambolin, softplay oyuncaklar, yer balonları, balon tak, fly tüp, şişme kostüm, reklam balonları, balon park, çocuk oyun grupları, şişme oyuncaklar, çocuk parkı, oyun alanı";
    ViewData["Image"] = Model.MainImage != null ? ((IUrlService?)ViewData["UrlService"])?.GetImageUrl(Model.MainImage.LargePath) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/{Model.MainImage.LargePath}" : ((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png";
    ViewData["ProductPrice"] = Model.Product?.Price.ToString("F0", System.Globalization.CultureInfo.InvariantCulture);
    ViewData["ProductCurrency"] = "TRY";
    ViewData["ProductAvailability"] = Model.Product?.Stock > 0 ? "in stock" : "out of stock";
    ViewData["ProductCondition"] = "new";
    ViewData["ProductBrand"] = companyName;
    ViewData["ProductSku"] = $"U-{Model.Product?.Id}";

    var productCategorySlug = Model.Product?.CategorySlug ?? string.Empty;
    var productSubCategorySlug = Model.Product?.SubCategorySlug ?? string.Empty;
    var productSlug = Model.Product?.Slug ?? string.Empty;
    var productShareUrl = ((IUrlService?)ViewData["UrlService"])?.GetProductUrl(productCategorySlug, productSubCategorySlug, productSlug)
        ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/category/{productCategorySlug}/{productSubCategorySlug}/{productSlug}";
    var productShareUrlEncoded = Uri.EscapeDataString(productShareUrl);
    var productShareTitle = Uri.EscapeDataString(Model.Product?.Name ?? string.Empty);
    var productNameEncoded = System.Net.WebUtility.HtmlEncode(Model.Product?.Name ?? "");
    var whatsAppDigits = string.IsNullOrEmpty(settings?.WhatsApp) ? "" : new string(settings.WhatsApp.Where(c => char.IsDigit(c)).ToArray());
    var isAdminLoggedIn = ViewData["IsAdminLoggedIn"] as bool? ?? false;
}


<!-- Product Section Start -->
<div class="space-y-6">
    @await Html.PartialAsync("Shared/_Breadcrumb", new List<BreadcrumbItem>
    {
        BreadcrumbItem.Link("Ana Sayfa", "/"),
        BreadcrumbItem.Link(Model.Product?.CategoryName ?? "Kategoriler", $"/category/{Model.Product?.CategorySlug}"),
        BreadcrumbItem.Link(Model.Product?.SubCategoryName ?? "Alt Kategoriler", $"/category/{Model.Product?.CategorySlug}/{Model.Product?.SubCategorySlug}"),
        BreadcrumbItem.Current(Model.Product?.Name ?? "")
    })

    <!-- Main Product Content: sol galeri (sabit genişlik), sağ ürün bilgisi (kalan alan) - referans e-ticaret layout -->
    <div class="grid grid-cols-1 lg:grid-cols-[minmax(0,540px)_1fr] gap-6 lg:gap-8 items-start">
        <div class="product-gallery product-detail-gallery w-full max-w-full relative">
            <!-- Paylaş ve Favori: galeri üzerinde sağ üst (referans görseldeki gibi) -->
            <div class="absolute top-3 right-3 z-20 flex items-center gap-1.5" role="group" aria-label="Paylaş ve favoriler">
                <a href="https://www.facebook.com/sharer/sharer.php?u=@productShareUrlEncoded" target="_blank" rel="noopener noreferrer" class="w-9 h-9 rounded-full bg-white/95 shadow flex items-center justify-center text-gray-600 hover:text-[#1877f2] transition" title="Facebook'ta paylaş" aria-label="Facebook'ta paylaş"><i data-lucide="facebook" class="w-4 h-4"></i></a>
                <a href="https://twitter.com/intent/tweet?url=@productShareUrlEncoded&text=@productShareTitle" target="_blank" rel="noopener noreferrer" class="w-9 h-9 rounded-full bg-white/95 shadow flex items-center justify-center text-gray-600 hover:text-[#1da1f2] transition" title="Twitter'da paylaş" aria-label="Twitter'da paylaş"><i data-lucide="twitter" class="w-4 h-4"></i></a>
                <button type="button" class="favorite-btn-detail w-9 h-9 rounded-full bg-white/95 shadow flex items-center justify-center text-gray-600 hover:text-primary transition" data-product-id="@Model.Product?.Id" title="Favorilere Ekle" aria-label="Favorilere Ekle"><i data-lucide="heart" class="w-4 h-4"></i></button>
            </div>
            <div class="product-gallery-main-wrap">
            <div class="swiper productMainSwiper product-gallery-main" data-swiper-autoplay="false" id="lightgallery" data-aria-describedby="@(productNameEncoded)">
                <div class="swiper-wrapper">
                    @if (Model.ProductImages.Any())
                    {
                        @foreach (var image in Model.ProductImages)
                        {
                            <div class="swiper-slide">
                                <div class="image-wrapper product-image-wrap product-gallery-slide-inner">
                                    <span class="img-loading-spinner" aria-hidden="true"></span>
                                    <a href="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl(image.LargePath) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/{image.LargePath}")"
                                       data-lg-size="1600-1600"
                                       data-src="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl(image.LargePath) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/{image.LargePath}")"
                                       data-sub-html="<h4>@productNameEncoded</h4>"
                                       class="product-gallery-link">
                                        <img src="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl(image.LargePath) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/{image.LargePath}")"
                                             class="lazy-image main-image product-gallery-img"
                                             alt="@Model.Product?.Name"
                                             loading="lazy"
                                             onload="this.classList.add('loaded'); var s=this.closest('.product-image-wrap').querySelector('.img-loading-spinner'); if(s) s.classList.add('hidden');"
                                             onerror="this.src='@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png")'; this.classList.add('loaded'); var s=this.closest('.product-image-wrap').querySelector('.img-loading-spinner'); if(s) s.classList.add('hidden');">
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="swiper-slide">
                            <div class="image-wrapper product-image-wrap product-gallery-slide-inner">
                                <span class="img-loading-spinner" aria-hidden="true"></span>
                                <a href="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png")"
                                   data-lg-size="800-800"
                                   data-src="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png")"
                                   data-sub-html="<h4>@productNameEncoded</h4>"
                                   class="product-gallery-link">
                                    <img src="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png")"
                                         class="lazy-image main-image product-gallery-img"
                                         alt="@Model.Product?.Name"
                                         loading="lazy"
                                         onload="this.classList.add('loaded'); var s=this.closest('.product-image-wrap').querySelector('.img-loading-spinner'); if(s) s.classList.add('hidden');">
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-button-next product-gallery-next" aria-label="Sonraki resim"></div>
                <div class="swiper-button-prev product-gallery-prev" aria-label="Önceki resim"></div>
                <div class="swiper-pagination product-gallery-pagination" aria-label="Resim sayfası"></div>
            </div>
            </div>

            @if (Model.ProductImages.Count > 1)
            {
                <div class="product-gallery-thumbs-wrap">
                    <div class="swiper productThumbsSwiper product-gallery-thumbs">
                        <div class="swiper-wrapper">
                            @foreach (var image in Model.ProductImages)
                            {
                                <div class="swiper-slide">
                                    <div class="thumbnail-item product-image-wrap" role="button" tabindex="0" aria-label="Resmi görüntüle">
                                        <span class="img-loading-spinner" aria-hidden="true"></span>
                                        <img src="@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl(image.ThumbnailPath) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/{image.ThumbnailPath}")"
                                             class="lazy-image product-gallery-thumb-img"
                                             alt="@Model.Product?.Name"
                                             loading="lazy"
                                             onload="this.classList.add('loaded'); var s=this.closest('.product-image-wrap').querySelector('.img-loading-spinner'); if(s) s.classList.add('hidden');"
                                             onerror="this.src='@(((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/no-image.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/no-image.png")'; this.classList.add('loaded'); var s=this.closest('.product-image-wrap').querySelector('.img-loading-spinner'); if(s) s.classList.add('hidden');">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="product-gallery-thumbs-prev swiper-button-prev" aria-label="Önceki küçük resimler"></div>
                    <div class="product-gallery-thumbs-next swiper-button-next" aria-label="Sonraki küçük resimler"></div>
                </div>
            }
        </div>

        <!-- Product Information (referans: marka, başlık, fiyat, rating, açıklama, renk swatch, CTA) -->
        <div class="product-detail-info space-y-4 min-w-0">
            @{
                var selectedCurrency = ViewData["SelectedCurrency"]?.ToString() ?? "TL";
                var productUrlForWa = ((IUrlService?)ViewData["UrlService"])?.GetProductUrl(Model.Product?.CategorySlug ?? "", Model.Product?.SubCategorySlug ?? "", Model.Product?.Slug ?? "") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/category/{Model.Product?.CategorySlug}/{Model.Product?.SubCategorySlug}/{Model.Product?.Slug}";
                var colorOptionsRaw = Model.Product?.ColorOptions ?? "";
                var colorItems = new List<(string Name, string? Hex)>();
                if (!string.IsNullOrWhiteSpace(colorOptionsRaw))
                {
                    foreach (var part in colorOptionsRaw.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries))
                    {
                        var trim = part.Trim();
                        var hexMatch = System.Text.RegularExpressions.Regex.Match(trim, @"^(.+?)\s*\(#?([0-9A-Fa-f]{6})\)\s*$");
                        if (hexMatch.Success)
                            colorItems.Add((hexMatch.Groups[1].Value.Trim(), "#" + hexMatch.Groups[2].Value.TrimStart('#')));
                        else if (System.Text.RegularExpressions.Regex.IsMatch(trim, @"^#?[0-9A-Fa-f]{6}$"))
                            colorItems.Add((trim.TrimStart('#'), "#" + trim.TrimStart('#')));
                        else if (!string.IsNullOrEmpty(trim))
                            colorItems.Add((trim, (string?)null));
                    }
                }
            }
            <!-- Üst satır: Marka/Kategori sol, WhatsApp + PDF sağ üst -->
            <div class="flex flex-wrap items-center justify-between gap-2">
                <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">@(Model.Product?.CategoryName)@(!string.IsNullOrEmpty(Model.Product?.SubCategoryName) ? " / " + Model.Product.SubCategoryName : "")</p>
                <div class="flex items-center gap-2 flex-shrink-0">
                    <a href="@(Url.Page("/ProductDetail", "ExportRelatedProductsPdf", new { categorySlug = Model.Product?.CategorySlug, subCategorySlug = Model.Product?.SubCategorySlug, productSlug = Model.Product?.Slug }))" id="productPdfBtn" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg border border-gray-200 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition shadow-sm disabled:opacity-70 disabled:pointer-events-none" title="Bu ürünü PDF olarak indir" aria-label="Ürünü PDF indir">
                        <i data-lucide="file-down" class="w-5 h-5 text-red-600 pdf-btn-icon flex-shrink-0" aria-hidden="true"></i>
                        <span class="pdf-btn-text">PDF indir</span>
                    </a>
                    @if (!string.IsNullOrEmpty(whatsAppDigits) && Model.Product?.Stock > 0 && Model.Product?.Price > 0)
                    {
                        <a href="https://wa.me/@whatsAppDigits?text=@(Uri.EscapeDataString($"Hızlı sipariş: {Model.Product?.Name} (U-{Model.Product?.Id}) %0A{productUrlForWa}"))" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg text-white text-sm font-medium transition shadow-md hover:shadow-lg whatsapp-btn-product" style="background-color:#25D366" onmouseover="this.style.backgroundColor='#20bd5a'" onmouseout="this.style.backgroundColor='#25D366'" aria-label="WhatsApp ile sipariş ver">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                            <span>WhatsApp</span>
                        </a>
                    }
                </div>
            </div>
            <!-- Ürün adı ve ürün kodu aynı satırda: başlık sol, kod sağ, düz metin -->
            <div class="flex flex-wrap items-baseline justify-between gap-2">
                <div class="admin-editable-field product-detail-editable min-w-0 flex-1 flex items-baseline gap-2 group @(isAdminLoggedIn ? "cursor-pointer" : "")" data-field="Name" data-product-id="@Model.Product?.Id" data-type="text" data-value="@Model.Product?.Name">
                    <h1 class="text-ink text-xl md:text-2xl font-semibold leading-tight admin-editable-value">@Model.Product?.Name</h1>
                    @if (isAdminLoggedIn)
                    {
                        <button type="button" class="admin-edit-icon inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-400 hover:text-primary hover:bg-primary/10 transition flex-shrink-0" aria-label="Ürün adını düzenle" title="Düzenle">
                            <i data-lucide="pencil" class="w-4 h-4"></i>
                        </button>
                    }
                </div>
                <p class="text-sm text-gray-600 shrink-0 flex items-center gap-1">
                    Ürün Kodu: <span id="product-code-display">U-@Model.Product?.Id</span>
                    <button type="button" class="product-code-copy p-1 rounded hover:bg-gray-100 text-gray-400 hover:text-gray-600 transition focus:outline-none focus:ring-2 focus:ring-primary/20" data-code="U-@Model.Product?.Id" title="Kodu kopyala" aria-label="Ürün kodunu kopyala">
                        <i data-lucide="copy" class="w-3.5 h-3.5"></i>
                    </button>
                </p>
            </div>
            <!-- Fiyat + indirim badge + görüntülenme (referans: £40 üstü çizili, £28 vurgulu, yanında rating) -->
            <div class="flex flex-wrap items-center gap-3 pb-4 border-b border-gray-100">
                @if (Model.Product?.Price <= 0)
                {
                    <div class="admin-editable-field product-detail-editable flex items-center gap-2 group @(isAdminLoggedIn ? "cursor-pointer" : "")" data-field="Price" data-product-id="@Model.Product?.Id" data-type="number" data-value="@Model.Product?.Price">
                        <p class="text-gray-500 admin-editable-value">Fiyat için iletişime geçin</p>
                        @if (isAdminLoggedIn)
                        {
                            <button type="button" class="admin-edit-icon inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-400 hover:text-primary hover:bg-primary/10 transition" aria-label="Fiyat düzenle" title="Düzenle">
                                <i data-lucide="pencil" class="w-4 h-4"></i>
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="flex items-center gap-2 flex-wrap">
                        <div class="admin-editable-field product-detail-editable flex items-center gap-2 group @(isAdminLoggedIn ? "cursor-pointer" : "")" data-field="Price" data-product-id="@Model.Product?.Id" data-type="number" data-value="@Model.Product?.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)">
                            <span class="price-main price-tl text-primary text-2xl font-semibold admin-editable-value @(selectedCurrency == "TL" ? "block" : "hidden")">₺@Model.Product?.Price.ToString("N0")</span>
                            @if (isAdminLoggedIn)
                            {
                                <button type="button" class="admin-edit-icon inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-400 hover:text-primary hover:bg-primary/10 transition" aria-label="Fiyat düzenle" title="Düzenle">
                                    <i data-lucide="pencil" class="w-4 h-4"></i>
                                </button>
                            }
                        </div>
                        <span class="price-main price-usd text-primary text-2xl font-semibold @(selectedCurrency == "USD" ? "block" : "hidden")">$@Model.Product?.UsdPrice.ToString("N0")</span>
                        <span class="price-main price-eur text-primary text-2xl font-semibold @(selectedCurrency == "EUR" ? "block" : "hidden")">€@Model.Product?.EuroPrice.ToString("N0")</span>
                        <span class="price-main price-rub text-primary text-2xl font-semibold @(selectedCurrency == "RUB" ? "block" : "hidden")">₽@Model.Product?.RubPrice.ToString("N0")</span>
                        @if (Model.Product?.IsDiscounted == true)
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-700">İndirimli</span>
                        }
                    </div>
                }
                @if ((Model.Product?.ViewCount ?? 0) > 0)
                {
                    <span class="flex items-center gap-1 text-sm text-gray-500" aria-label="@Model.Product!.ViewCount görüntülenme">
                        <i data-lucide="eye" class="w-4 h-4 text-gray-400"></i>
                        <span>@Model.Product!.ViewCount görüntülenme</span>
                    </span>
                }
            </div>
            <!-- Açıklama (tüm metin her zaman görünür) -->
            @if (!string.IsNullOrEmpty(Model.Product?.Description) || !string.IsNullOrEmpty(Model.Product?.Summary))
            {
                var fullDesc = !string.IsNullOrEmpty(Model.Product?.Description) ? Model.Product.Description : Model.Product?.Summary ?? "";
                <div class="product-description-block border-b border-gray-100 pb-4 admin-editable-field product-detail-editable group @(isAdminLoggedIn ? "cursor-pointer" : "")" data-field="Description" data-product-id="@Model.Product?.Id" data-type="textarea">
                    <div class="text-sm text-gray-700 leading-relaxed admin-editable-value">@Html.Raw(fullDesc)</div>
                    @if (isAdminLoggedIn)
                    {
                        <button type="button" class="admin-edit-icon inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-400 hover:text-primary hover:bg-primary/10 transition mt-1" aria-label="Açıklamayı düzenle" title="Düzenle">
                            <i data-lucide="pencil" class="w-4 h-4"></i>
                        </button>
                    }
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Product?.Summary) && !string.IsNullOrEmpty(Model.Product?.Description))
            {
                <div class="border-b border-gray-100 pb-4 admin-editable-field product-detail-editable group @(isAdminLoggedIn ? "cursor-pointer" : "")" data-field="Summary" data-product-id="@Model.Product?.Id" data-type="textarea">
                    <p class="text-sm font-medium text-gray-600 mb-1">Özet</p>
                    <div class="text-sm text-gray-700 leading-relaxed admin-editable-value">@(Model.Product?.Summary)</div>
                    @if (isAdminLoggedIn)
                    {
                        <button type="button" class="admin-edit-icon inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-400 hover:text-primary hover:bg-primary/10 transition mt-1" aria-label="Özeti düzenle" title="Düzenle">
                            <i data-lucide="pencil" class="w-4 h-4"></i>
                        </button>
                    }
                </div>
            }
            <!-- Özellik etiketleri: Paket, Ateşe dayanıklı, Kumaş, Teslimat, Popüler, Projeye özel (indirim fiyatın yanında) -->
            @{
                var deliveryMin = Model.Product?.DeliveryDaysMin;
                var deliveryMax = Model.Product?.DeliveryDaysMax;
                var deliveryLabel = (deliveryMin != null && deliveryMax != null)
                    ? (deliveryMin == deliveryMax ? $"{deliveryMin} iş günü" : $"{deliveryMin}-{deliveryMax} iş günü")
                    : (deliveryMin != null ? $"{deliveryMin} iş günü" : (deliveryMax != null ? $"{deliveryMax} iş günü" : null));
                if (string.IsNullOrEmpty(deliveryLabel) && !string.IsNullOrEmpty(Model.Product?.DeliveryDays)) { deliveryLabel = Model.Product?.DeliveryDays; }
                var packL = Model.Product?.PackagedLength?.Trim();
                var packD = Model.Product?.PackagedDepth?.Trim();
                var packW = Model.Product?.PackagedWeightKg;
                var packagedTag = (!string.IsNullOrEmpty(packL) || !string.IsNullOrEmpty(packD) || packW != null)
                    ? $"{(string.IsNullOrEmpty(packL) ? "0" : packL)}×{(string.IsNullOrEmpty(packD) ? "0" : packD)}×{(packW?.ToString() ?? "0")}"
                    : null;
                var hasFeatureTags = !string.IsNullOrEmpty(packagedTag) || Model.Product?.IsFireResistant == true || Model.Product?.MaterialWeightGrm2 != null || !string.IsNullOrEmpty(Model.Product?.MaterialWeight) || !string.IsNullOrEmpty(deliveryLabel) || Model.Product?.IsPopular == true || Model.Product?.IsProjectSpecial == true;
            }
            @if (hasFeatureTags || isAdminLoggedIn)
            {
                <div class="product-feature-tags border-b border-gray-100 pb-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3">
                        @if (!string.IsNullOrEmpty(packagedTag))
