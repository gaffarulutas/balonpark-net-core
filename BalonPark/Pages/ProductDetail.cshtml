            margin: 0 auto;
        }
        
        .product-title {
            font-size: 42px;
        }
        
        .main-image {
            height: 500px;
        }
        
        .thumbnail-item {
            width: 100px;
            height: auto;
        }
        
        .price-main {
            font-size: 48px;
        }
        
        .feature-icon {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
        
        .whatsapp-btn,
        .contact-btn {
            padding: 18px 30px;
            font-size: 18px;
        }
    }

    /* Large Desktop Styles */
    @@media (min-width: 1400px) {
        .breadcrumb-container,
        .product-header,
        .product-content,
        .technical-description-section {
            max-width: 1400px;
        }
        
        .product-title {
            font-size: 48px;
        }
        
        .main-image {
            height: 600px;
        }
        
        .thumbnail-item {
            width: 120px;
            height: 120px;
        }
        
        .price-main {
            font-size: 56px;
        }
        
        .feature-icon {
            width: 60px;
            height: 60px;
            font-size: 24px;
        }
    }

    /* Breadcrumb Navigation */
    .breadcrumb-nav {
        margin-bottom: 30px;
    }

    .breadcrumb-container {
        display: flex;
        align-items: center;
        gap: 8px;
        background: white;
        padding: 15px 20px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-light);
        flex-wrap: wrap;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--text-light);
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: var(--transition);
    }

    .breadcrumb-item:hover {
        color: var(--primary-color);
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: var(--text-dark);
        font-weight: 600;
    }

    .breadcrumb-separator {
        color: var(--text-light);
        font-weight: 300;
    }

    /* Product Header */
    .product-header {
        background: white;
        padding: 30px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-light);
        margin-bottom: 30px;
    }

    .product-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .product-title {
        font-size: 36px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
        line-height: 1.2;
        flex: 1;
    }

    .product-actions {
        display: flex;
        align-items: center;
        gap: 6px;
        flex-shrink: 0;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        border: none;
        color: white;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* Favori butonu */
    .favorite-btn-detail {
        background: #dc2626;
    }

    .favorite-btn-detail:hover {
        background: #b91c1c;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .favorite-btn-detail.active {
        background: #991b1b;
    }

    /* Karşılaştırma butonu */
    .compare-btn-detail {
        background: #2563eb;
    }

    .compare-btn-detail:hover {
        background: #1d4ed8;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .compare-btn-detail.active {
        background: #1e40af;
    }

    .action-btn.active i,
    .action-btn.added i {
        animation: pulse 0.3s ease;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    .product-meta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .product-category,
    .product-subcategory {
        background: var(--primary-color);
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-subcategory {
        background: var(--accent-color);
    }

    /* Social Share Section */
    .social-share-section {
        display: flex;
        align-items: center;
        gap: 15px;
        justify-content: flex-end;
    }

    .share-label {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-light);
    }

    .social-buttons {
        display: flex;
        gap: 10px;
    }

    .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        text-decoration: none;
        transition: var(--transition);
        font-size: 18px;
        color: white;
        box-shadow: var(--shadow-light);
    }

    .social-btn:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-medium);
        color: white;
        text-decoration: none;
    }

    .social-btn.facebook { background: linear-gradient(135deg, #1877F2 0%, #0A5BC4 100%); }
    .social-btn.twitter { background: linear-gradient(135deg, #1DA1F2 0%, #0D8BD9 100%); }
    .social-btn.linkedin { background: linear-gradient(135deg, #0077B5 0%, #005885 100%); }
    .social-btn.whatsapp { background: var(--whatsapp-gradient); }

    /* Product Content */
    .product-content {
        margin-bottom: 40px;
    }

    /* Product Gallery */
    .product-gallery {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-light);
        overflow: hidden;
    }

    .main-image-container {
        position: relative;
        background: #f8f9fa;
        padding: 20px;
    }

    .image-wrapper {
        position: relative;
        border-radius: var(--border-radius);
        overflow: hidden;
        background: white;
        box-shadow: var(--shadow-light);
    }

    .main-image {
        width: 100%;
        height: 450px;
        object-fit: cover;
        transition: var(--transition);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: var(--transition);
    }

    .image-wrapper:hover .image-overlay {
        opacity: 1;
    }

    .zoom-btn {
        background: white;
        border: none;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: var(--primary-color);
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-medium);
    }

    .zoom-btn:hover {
        transform: scale(1.1);
        background: var(--primary-color);
        color: white;
    }

    /* Thumbnail Gallery */
    .thumbnail-gallery {
        padding: 20px;
        background: white;
    }

    .thumbnail-container {
        display: flex;
        gap: 10px;
        overflow-x: auto;
        padding-bottom: 10px;
    }

    .thumbnail-item {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        border-radius: var(--border-radius);
        overflow: hidden;
        border: 3px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-light);
    }

    .thumbnail-item:hover,
    .thumbnail-item.active {
        border-color: #6c757d;
        transform: scale(1);
    }

    .thumbnail-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Product Info */
    .product-info {
        background: white;
        padding: 30px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-light);
        height: fit-content;
    }

    /* Price Section */
    .price-section {
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 2px solid var(--border-color);
    }

    .price-main {
        font-size: 42px;
        font-weight: 800;
        color: var(--primary-color);
        margin-bottom: 10px;
        line-height: 1;
    }

    .price-tl,
    .price-usd,
    .price-eur {
        display: none;
    }

    .price-tl.active,
    .price-usd.active,
    .price-eur.active {
        display: block;
    }


    /* Stock Section */
    .stock-section {
        margin-bottom: 25px;
    }

    .stock-status {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border-radius: var(--border-radius);
        font-weight: 600;
    }

    .stock-status.in-stock {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
        border: 2px solid rgba(40, 167, 69, 0.2);
    }

    .stock-status.out-of-stock {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border: 2px solid rgba(220, 53, 69, 0.2);
    }

    .stock-status i {
        font-size: 20px;
    }

    .stock-count {
        font-size: 12px;
        opacity: 0.8;
    }

    /* Product Features */
    .product-features {
        margin-bottom: 25px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 0;
        border-bottom: 1px solid var(--border-color);
    }

    .feature-item:last-child {
        border-bottom: none;
    }

    .feature-icon {
        width: 40px;
        height: 40px;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        flex-shrink: 0;
    }

    .feature-content {
        flex: 1;
    }

    .feature-label {
        font-size: 12px;
        font-weight: 600;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .feature-value {
        font-size: 14px;
        font-weight: 500;
        color: var(--text-dark);
    }

    /* Product Description */
    .product-description {
        margin-bottom: 30px;
    }

    .description-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--border-color);
    }

    .description-text {
        font-size: 15px;
        line-height: 1.6;
        color: var(--text-light);
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .whatsapp-btn {
        background: var(--whatsapp-gradient);
        border: none;
        color: white;
        padding: 15px 25px;
        border-radius: var(--border-radius);
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: var(--transition);
        box-shadow: var(--shadow-light);
        flex: 1;
        justify-content: center;
    }

    .whatsapp-btn:hover {
        background: linear-gradient(135deg, #20C05A 0%, #0F7A6E 100%);
        color: white;
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
        text-decoration: none;
    }

    .contact-btn {
        background: white;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        padding: 15px 25px;
        border-radius: var(--border-radius);
        font-size: 16px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: var(--transition);
        flex: 1;
        justify-content: center;
    }

    .contact-btn:hover {
        background: var(--primary-color);
        color: white;
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
    }

    /* Technical Description Section */
    .technical-description-section {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-light);
        overflow: hidden;
    }

    .section-header {
        background: var(--header-gradient);
        padding: 25px 30px;
        color: white;
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        margin: 0;
    }

    .section-divider {
        width: 60px;
        height: 3px;
        background: white;
        margin-top: 10px;
        border-radius: 2px;
    }

    .technical-content {
        padding: 30px;
        font-size: 16px;
        line-height: 1.7;
        color: var(--text-dark);
    }

    .technical-content h1,
    .technical-content h2,
    .technical-content h3,
    .technical-content h4,
    .technical-content h5,
    .technical-content h6 {
        color: var(--primary-color);
        margin-top: 25px;
        margin-bottom: 15px;
        font-weight: 700;
    }

    .technical-content h1 { font-size: 28px; }
    .technical-content h2 { font-size: 24px; }
    .technical-content h3 { font-size: 20px; }
    .technical-content h4 { font-size: 18px; }
    .technical-content h5 { font-size: 16px; }
    .technical-content h6 { font-size: 14px; }

    .technical-content ul,
    .technical-content ol {
        margin: 15px 0;
        padding-left: 30px;
    }

    .technical-content li {
        margin-bottom: 8px;
        color: var(--text-dark);
    }

    .technical-content table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow-light);
    }

    .technical-content table th,
    .technical-content table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
    }

    .technical-content table th {
        background: var(--primary-color);
        color: white;
        font-weight: 600;
    }

    .technical-content table tr:nth-child(even) {
        background: var(--secondary-color);
    }

    .technical-content table tr:hover {
        background: rgba(98, 98, 166, 0.05);
    }

    .technical-content blockquote {
        border-left: 4px solid var(--primary-color);
        padding: 20px;
        margin: 20px 0;
        font-style: italic;
        color: var(--text-light);
        background: var(--secondary-color);
        border-radius: 0 var(--border-radius) var(--border-radius) 0;
    }

    .technical-content a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .technical-content a:hover {
        text-decoration: underline;
    }

    /* Modals */
    .image-modal,
    .contact-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(5px);
    }

    .modal-content {
        position: relative;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-heavy);
        max-width: 90%;
        max-height: 90%;
        overflow: hidden;
    }

    .modal-image {
        max-width: 100%;
        max-height: 80vh;
        object-fit: contain;
    }

    .close-modal {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 30px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        z-index: 10000;
        background: rgba(0, 0, 0, 0.5);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
    }

    .close-modal:hover {
        background: rgba(0, 0, 0, 0.8);
    }

    .modal-header {
        padding: 20px 25px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header h4 {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .modal-body {
        padding: 25px;
    }

    .contact-options {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .contact-option {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 20px;
        background: var(--secondary-color);
        border-radius: var(--border-radius);
        text-decoration: none;
        color: var(--text-dark);
        transition: var(--transition);
        border: 2px solid transparent;
    }

    .contact-option:hover {
        background: var(--primary-color);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
    }

    .contact-option i {
        font-size: 20px;
        width: 24px;
        text-align: center;
    }

    /* Price Row - Always Horizontal */
    .price-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        flex-wrap: nowrap;
    }

    .price-container {
        display: flex;
        align-items: center;
        gap: 10px;
        flex: 1;
    }

    /* Product Code Section */
    .product-code-section {
        margin-bottom: 25px;
        padding: 15px;
        background: #f8f9fa;
        border: 1px solid #e1e5e9;
        border-radius: 12px;
    }

    .product-code-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        flex-wrap: nowrap;
    }

    .product-code {
        display: flex;
        align-items: center;
        gap: 10px;
        flex: 1;
        min-width: 0;
    }

    .code-label {
        font-weight: 600;
        color: #6262a6;
        font-size: 14px;
    }

    .code-value {
        font-weight: 700;
        color: #333;
        font-size: 16px;
        background: #6262a6;
        color: white;
        padding: 4px 12px;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
    }

    .whatsapp-contact {
        flex-shrink: 0;
    }

    .whatsapp-contact-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: #25D366;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(37, 211, 102, 0.3);
    }

    .whatsapp-contact-btn:hover {
        background: #128C7E;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(37, 211, 102, 0.4);
    }

    .whatsapp-contact-btn i {
        font-size: 16px;
    }

    /* Buy Now Button - Google Shopping Requirement */
    .buy-now-section {
        margin-bottom: 25px;
        padding-top: 20px;
        border-top: 2px solid var(--border-color);
    }

    .buy-now-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 18px 30px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        text-decoration: none;
        border: none;
        border-radius: var(--border-radius);
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: var(--transition);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        cursor: pointer;
    }

    .buy-now-button:hover:not(.disabled) {
        background: linear-gradient(135deg, #218838 0%, #1aa179 100%);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
    }

    .buy-now-button:active:not(.disabled) {
        transform: translateY(0);
        box-shadow: 0 2px 10px rgba(40, 167, 69, 0.3);
    }

    .buy-now-button.price-inquiry {
        background: linear-gradient(135deg, var(--primary-color) 0%, #4a4a8a 100%);
        box-shadow: 0 4px 15px rgba(98, 98, 166, 0.3);
    }

    .buy-now-button.price-inquiry:hover {
        background: linear-gradient(135deg, #4a4a8a 0%, #3a3a7a 100%);
        box-shadow: 0 6px 20px rgba(98, 98, 166, 0.4);
    }

    .buy-now-button.disabled {
        background: #6c757d;
        color: white;
        cursor: not-allowed;
        opacity: 0.6;
        box-shadow: none;
    }

    .buy-now-button i {
        font-size: 20px;
    }

    /* Social Share Mini - Desktop */
    .social-share-mini {
        display: flex;
        align-items: center;
        gap: 6px;
        flex-shrink: 0;
    }

    .social-btn-mini {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .social-btn-mini.facebook {
        background: #1877f2;
        color: white;
    }

    .social-btn-mini.twitter {
        background: #1da1f2;
        color: white;
    }

    .social-btn-mini.linkedin {
        background: #0077b5;
        color: white;
    }

    .social-btn-mini.whatsapp {
        background: #25d366;
        color: white;
    }

    .social-btn-mini:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        text-decoration: none;
    }

    .social-btn-mini.facebook:hover {
        background: #166fe5;
    }

    .social-btn-mini.twitter:hover {
        background: #0d8bd9;
    }

    .social-btn-mini.linkedin:hover {
        background: #006ba1;
    }

    .social-btn-mini.whatsapp:hover {
        background: #128c7e;
    }

    /* Swiper Navigation - Mobile Compact */
    .swiper-button-next,
    .swiper-button-prev {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 50%;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .swiper-button-next::after,
    .swiper-button-prev::after {
