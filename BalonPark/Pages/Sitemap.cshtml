@page "/sitemap"
@model SitemapModel
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Title"] = "Site Haritası";
    ViewData["Description"] = $"{companyName} site haritası. Tüm sayfalar, kategoriler, ürünler ve blog yazılarına buradan ulaşabilirsiniz.";
    ViewData["Keywords"] = "site haritası, sitemap, tüm sayfalar, ünlü park, şişme oyun parkı";
    ViewData["Image"] = settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? settings.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
}

<!-- Sitemap Section Start -->
<div class="section-b-space">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb-nav">
        <div class="breadcrumb-container">
            <a href="/" class="breadcrumb-item">
                <i class="fas fa-home"></i>
                <span>Ana Sayfa</span>
            </a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-item active">Site Haritası</span>
        </div>
    </nav>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Main Pages -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="sitemap-card">
                    <div class="sitemap-card-header">
                        <i class="fas fa-home"></i>
                        <h3>Ana Sayfalar</h3>
                    </div>
                    <ul class="sitemap-list">
                        <li><a asp-page="/Index"><i class="fas fa-chevron-right"></i> Ana Sayfa</a></li>
                        <li><a asp-page="/Hakkimizda"><i class="fas fa-chevron-right"></i> Hakkımızda</a></li>
                        <li><a asp-page="/Iletisim"><i class="fas fa-chevron-right"></i> İletişim</a></li>
                        <li><a asp-page="/Blog"><i class="fas fa-chevron-right"></i> Blog</a></li>
                        <li><a asp-page="/Privacy"><i class="fas fa-chevron-right"></i> Gizlilik Politikası</a></li>
                        <li><a asp-page="/KullanimKosullari"><i class="fas fa-chevron-right"></i> Kullanım Koşulları</a></li>
                    </ul>
                </div>
            </div>

            <!-- Categories -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="sitemap-card">
                    <div class="sitemap-card-header">
                        <i class="fas fa-folder-open"></i>
                        <h3>Kategoriler</h3>
                        <span class="badge">@Model.Categories.Count</span>
                    </div>
                    <ul class="sitemap-list scrollable">
                        @foreach (var category in Model.Categories)
                        {
                            <li>
                                <a href="/category/@category.Slug">
                                    <i class="fas fa-chevron-right"></i> @Html.Raw(category.Name)
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Subcategories -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="sitemap-card">
                    <div class="sitemap-card-header">
                        <i class="fas fa-folder"></i>
                        <h3>Alt Kategoriler</h3>
                        <span class="badge">@Model.SubCategories.Count</span>
                    </div>
                    <ul class="sitemap-list scrollable">
                        @foreach (var subCategory in Model.SubCategories)
                        {
                            <li>
                                <a href="/category/@subCategory.CategorySlug/@subCategory.Slug">
                                    <i class="fas fa-chevron-right"></i> @Html.Raw(subCategory.Name)
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Blog Posts -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="sitemap-card">
                    <div class="sitemap-card-header">
                        <i class="fas fa-blog"></i>
                        <h3>Blog Yazıları</h3>
                        <span class="badge">@Model.Blogs.Count</span>
                    </div>
                    <ul class="sitemap-list scrollable">
                        @foreach (var blog in Model.Blogs.Take(50))
                        {
                            <li>
                                <a href="/blog/@blog.Slug">
                                    <i class="fas fa-chevron-right"></i> @Html.Raw(blog.Title)
                                </a>
                            </li>
                        }
                        @if (Model.Blogs.Count > 50)
                        {
                            <li class="more-link">
                                <a asp-page="/Blog">
                                    <i class="fas fa-plus-circle"></i> Tüm Blog Yazıları (@Model.Blogs.Count)
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        @if (Model.Products.Any())
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="sitemap-card sitemap-card-full">
                        <div class="sitemap-card-header">
                            <i class="fas fa-box-open"></i>
                            <h3>Ürünlerimiz</h3>
                            <span class="badge">@Model.Products.Count</span>
                        </div>
                        
                        <!-- Group products by category -->
                        @foreach (var categoryGroup in Model.Products.GroupBy(p => p.CategoryName).OrderBy(g => g.Key))
                        {
                            <div class="product-category-group">
                                <h4 class="category-group-title">
                                    <i class="fas fa-tag"></i> @Html.Raw(categoryGroup.Key)
                                    <span class="count">(@categoryGroup.Count())</span>
                                </h4>
                                <div class="row">
                                    @foreach (var product in categoryGroup.Take(20))
                                    {
                                        <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
                                            <a href="/category/@product.CategorySlug/@product.SubCategorySlug/@product.Slug" class="product-link">
                                                <i class="fas fa-chevron-right"></i> @Html.Raw(product.Name)
                                            </a>
                                        </div>
                                    }
                                    @if (categoryGroup.Count() > 20)
                                    {
                                        <div class="col-12">
                                            <a href="/category/@categoryGroup.First().CategorySlug" class="more-products-link">
                                                <i class="fas fa-plus-circle"></i> @categoryGroup.Key kategorisindeki tüm ürünleri gör (+@(categoryGroup.Count() - 20))
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- SEO Info -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="seo-info-box">
                    <div class="seo-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="seo-content">
                        <h3>Site Haritası Hakkında</h3>
                        <p>
                            Bu HTML site haritası sayfası, web sitemizde yer alan tüm içeriklere kolay erişim sağlamak için tasarlanmıştır. 
                            Arama motorları için XML sitemap'imize <a href="/sitemap.xml" target="_blank">buradan ulaşabilirsiniz</a>.
                        </p>
                        <p class="mb-0">
                            <strong>Toplam:</strong> 
                            @Model.Categories.Count Kategori, 
                            @Model.SubCategories.Count Alt Kategori, 
                            @Model.Products.Count Ürün, 
                            @Model.Blogs.Count Blog Yazısı
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>

/* Sitemap Intro */
.sitemap-intro {
    text-align: center;
    margin-bottom: 2rem;
}

.sitemap-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #6262a6, #4a4a8a);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2rem;
    box-shadow: 0 10px 30px rgba(98, 98, 166, 0.3);
}

.sitemap-intro h2 {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
}

.sitemap-intro p {
    color: #666;
    font-size: 1.1rem;
    max-width: 800px;
    margin: 0 auto;
}

/* Sitemap Card */
.sitemap-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    height: 100%;
    transition: all 0.3s ease;
}

.sitemap-card:hover {
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
}

.sitemap-card-full {
    padding: 2rem;
}

.sitemap-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f0f0f0;
}

.sitemap-card-header i {
    color: #6262a6;
    font-size: 1.5rem;
}

.sitemap-card-header h3 {
    color: #333;
    font-weight: 600;
    margin: 0;
    font-size: 1.2rem;
    flex: 1;
}

.sitemap-card-header .badge {
    background: #6262a6;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
}

/* Sitemap List */
.sitemap-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.sitemap-list.scrollable {
    max-height: 400px;
    overflow-y: auto;
    padding-right: 0.5rem;
}

.sitemap-list.scrollable::-webkit-scrollbar {
    width: 6px;
}

.sitemap-list.scrollable::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.sitemap-list.scrollable::-webkit-scrollbar-thumb {
    background: #6262a6;
    border-radius: 10px;
}

.sitemap-list.scrollable::-webkit-scrollbar-thumb:hover {
    background: #4a4a8a;
}

.sitemap-list li {
    margin-bottom: 0.75rem;
}

.sitemap-list a {
    color: #555;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 6px;
}

.sitemap-list a:hover {
    color: #6262a6;
    background: #f8f9fa;
    padding-left: 1rem;
}

.sitemap-list a i {
    font-size: 0.75rem;
    color: #6262a6;
}

.sitemap-list .more-link a {
    color: #6262a6;
    font-weight: 600;
}

/* Product Category Group */
.product-category-group {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
}

.product-category-group:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.category-group-title {
    color: #333;
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.category-group-title i {
    color: #6262a6;
}

.category-group-title .count {
    color: #666;
    font-size: 0.9rem;
    font-weight: 400;
}

.product-link {
    color: #555;
    text-decoration: none;
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 6px;
    font-size: 0.9rem;
}

.product-link:hover {
    color: #6262a6;
    background: #f8f9fa;
    padding-left: 1rem;
}

.product-link i {
    font-size: 0.65rem;
    color: #6262a6;
    margin-top: 0.35rem;
    flex-shrink: 0;
}

.more-products-link {
    color: #6262a6;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.more-products-link:hover {
    background: #6262a6;
    color: white;
    transform: translateX(5px);
}

/* SEO Info Box */
.seo-info-box {
    background: linear-gradient(135deg, #6262a6, #4a4a8a);
    border-radius: 12px;
    padding: 2rem;
    color: white;
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    box-shadow: 0 10px 30px rgba(98, 98, 166, 0.3);
}

.seo-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
}

.seo-content h3 {
    color: white;
    font-weight: 600;
    margin-bottom: 1rem;
}

.seo-content p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 1rem;
}

.seo-content a {
    color: white;
    text-decoration: underline;
}

.seo-content a:hover {
    text-decoration: none;
}

/* Responsive */
@@media (max-width: 768px) {
    .breadcrumb-title {
        font-size: 1.5rem;
    }
    
    .sitemap-card {
        margin-bottom: 1.5rem;
    }
    
    .sitemap-list.scrollable {
        max-height: 300px;
    }
    
    .seo-info-box {
        flex-direction: column;
        gap: 1rem;
    }
    
    .product-link {
        font-size: 0.85rem;
    }
}
</style>
}

