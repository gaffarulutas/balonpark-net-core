@page
@model KullanimKosullariModel
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Title"] = "Kullanım Koşulları";
    ViewData["Description"] = $"{companyName} kullanım koşulları ve şartları. Web sitemizi kullanırken uymanız gereken kurallar ve koşullar.";
    ViewData["Keywords"] = "kullanım koşulları, şartlar, balon park, şişme oyun grupları, kurallar";
    ViewData["Image"] = settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? settings.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
    var lastUpdated = DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"));
}

<article class="space-y-12 md:space-y-16 pb-10" id="terms-page-content">
    <nav aria-label="Breadcrumb" class="mb-6">
        <ol class="flex flex-wrap items-center gap-x-2 gap-y-1 text-sm text-gray-500">
            <li>
                <a asp-page="/Index" class="text-gray-500 hover:text-primary rounded transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">Ana Sayfa</a>
            </li>
            <li class="flex items-center gap-2" aria-hidden="true">
                <i data-lucide="chevron-right" class="w-4 h-4 text-gray-400 flex-shrink-0" aria-hidden="true"></i>
                <span class="text-ink font-medium" aria-current="page">Kullanım Koşulları</span>
            </li>
        </ol>
    </nav>

    <header class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-start">
            <span class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                <i data-lucide="file-text" class="w-7 h-7"></i>
            </span>
            <div class="min-w-0 flex-1">
                <h1 class="text-3xl font-bold text-ink sm:text-4xl">Kullanım Koşulları</h1>
                <p class="mt-2 text-lg text-gray-600 leading-relaxed">Bu web sitesini kullanarak aşağıdaki kullanım koşullarını kabul etmiş sayılırsınız. Lütfen bu koşulları dikkatlice okuyunuz.</p>
                <p class="mt-3 text-sm text-gray-500"><strong>Son Güncelleme:</strong> @lastUpdated</p>
            </div>
        </div>
    </header>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <section aria-labelledby="terms-general-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
            <h2 id="terms-general-heading" class="mb-3 flex items-center gap-3 text-xl font-semibold text-ink">
                <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="hammer" class="w-5 h-5"></i>
                </span>
                Genel Hükümler
            </h2>
            <p class="text-gray-600 leading-relaxed">Bu kullanım koşulları, @companyName tarafından işletilen web sitesinin kullanımına ilişkindir. Siteyi kullanarak bu koşulları kabul etmiş sayılırsınız.</p>
        </section>
        <section aria-labelledby="terms-service-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
            <h2 id="terms-service-heading" class="mb-3 flex items-center gap-3 text-xl font-semibold text-ink">
                <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="handshake" class="w-5 h-5"></i>
                </span>
                Hizmet Kapsamı
            </h2>
            <p class="text-gray-600 leading-relaxed">Web sitemiz şişme oyun grupları, kaydıraklar, havuzlar ve diğer oyun ekipmanları hakkında bilgi sunmak amacıyla hazırlanmıştır. Ürün bilgileri ve fiyatlar değiştirilebilir.</p>
        </section>
    </div>

    <section aria-labelledby="terms-responsibilities-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <h2 id="terms-responsibilities-heading" class="mb-4 flex items-center gap-3 text-xl font-semibold text-ink">
            <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white" aria-hidden="true">
                <i data-lucide="user-check" class="w-5 h-5"></i>
            </span>
            Kullanıcı Sorumlulukları
        </h2>
        <p class="text-gray-600 leading-relaxed">Web sitesini yalnızca yasal amaçlar için kullanacak, başkalarının haklarını ihlal etmeyecek, site güvenliğini tehlikeye atmayacak, telif hakkı ihlali yapmayacak ve zararlı yazılım yüklemeye çalışmayacaksınız.</p>
    </section>

    <section aria-labelledby="terms-rules-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <h2 id="terms-rules-heading" class="mb-6 text-center text-xl font-semibold text-ink">Önemli Koşullar ve Kurallar</h2>
        <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4" role="list">
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="copyright" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Fikri Mülkiyet</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Web sitesindeki tüm içerikler @companyName'a aittir ve telif hakkı koruması altındadır.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="info" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Ürün Bilgileri</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Sitedeki ürün bilgileri bilgilendirme amaçlıdır. Kesin bilgi için iletişime geçin.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="shield" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Sorumluluk Sınırları</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Site kullanımından doğabilecek zararlardan sorumlu değiliz. Kullanıcı kendi sorumluluğundadır.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="scale" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Türk Hukuku</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Bu koşullar Türk Hukuku'na tabidir. Uyuşmazlık durumunda Türk Mahkemeleri yetkilidir.</p>
            </li>
        </ul>
    </section>

    <section aria-labelledby="terms-contact-heading" class="rounded-xl border border-gray-100 bg-white p-6 text-center shadow-sm md:p-8">
        <h2 id="terms-contact-heading" class="text-xl font-semibold text-ink mb-2">İletişim</h2>
        <p class="text-gray-600 mb-6 max-w-xl mx-auto">Kullanım koşulları hakkında sorularınız için bizimle iletişime geçebilirsiniz.</p>
        <nav class="flex flex-col flex-wrap items-center justify-center gap-3 sm:flex-row" aria-label="İletişim kanalları">
            @if (!string.IsNullOrEmpty(settings?.WhatsApp))
            {
                var whatsAppDigits = new string(settings.WhatsApp.Where(c => char.IsDigit(c) || c == '+').ToArray());
                <a href="https://wa.me/@whatsAppDigits" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-green-500 text-white font-medium hover:bg-green-600 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="message-circle" class="w-5 h-5" aria-hidden="true"></i>
                    <span>WhatsApp</span>
                </a>
            }
            @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
            {
                var telHref = "tel:" + new string(settings.PhoneNumber.Where(c => char.IsDigit(c) || c == '+').ToArray());
                <a href="@telHref" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="phone" class="w-5 h-5" aria-hidden="true"></i>
                    <span>Telefon</span>
                </a>
            }
            <a asp-page="/Iletisim" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gray-100 text-ink font-medium hover:bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                <i data-lucide="mail" class="w-5 h-5" aria-hidden="true"></i>
                <span>İletişim Formu</span>
            </a>
        </nav>
    </section>
</article>
