@page
@model HakkimizdaModel
@using System.Collections.Generic
@using System.Linq
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Title"] = "Hakkımızda";
    ViewData["Description"] = $"{companyName} hakkında bilgi alın. Kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve daha fazlası için güvenilir çözüm ortağınız.";
    ViewData["Keywords"] = "hakkımızda, balon park, şişme oyun grupları, kaliteli ürünler, güvenilir firma";
    ViewData["Image"] = settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? settings.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
    var defaultDescription = $"Türkiye'nin en kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve çocuk oyun grupları üreticisi. Güvenli, dayanıklı ve eğlenceli ürünler.";
}

<!-- About Page Structured Data -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "AboutPage",
    "name": "@Html.Raw("Hakkımızda - " + companyName)",
    "description": "@Html.Raw(companyName + " hakkında bilgi alın. Kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve daha fazlası için güvenilir çözüm ortağınız.")",
    "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/hakkimizda") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/hakkimizda")",
    "mainEntity": {
        "@@type": "Organization",
        "name": "@Html.Raw(companyName)",
        "alternateName": "@Html.Raw(companyName.Replace(" ", ""))",
        "description": "@Html.Raw(settings?.About ?? defaultDescription)",
        "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")",
        "logo": "@(settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}{settings.Logo}") : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png"))",
        "foundingDate": "2020",
        "numberOfEmployees": "10-50",
        "industry": "Manufacturing",
        "knowsAbout": [
            "@Html.Raw("Şişme Oyun Parkları")",
            "@Html.Raw("Çocuk Oyun Grupları")",
            "@Html.Raw("Şişme Kaydıraklar")",
            "@Html.Raw("Şişme Havuzlar")",
            "@Html.Raw("Top Havuzları")",
            "@Html.Raw("İç Mekan Oyun Parkları")"
        ],
        "contactPoint": {
            "@@type": "ContactPoint",
            "contactType": "customer service",
            "telephone": "@Html.Raw(settings?.PhoneNumber ?? "+90-533-635-50-39")",
            "email": "@Html.Raw(settings?.Email ?? "info@balonpark.com")",
            "availableLanguage": ["Turkish", "English"],
            "contactOption": "TollFree",
            "areaServed": "TR"
        },
        "address": {
            "@@type": "PostalAddress",
            "streetAddress": "@Html.Raw(settings?.Address ?? "")",
            "addressLocality": "@Html.Raw(settings?.City ?? "Türkiye")",
            "addressRegion": "@Html.Raw(settings?.District ?? "")",
            "postalCode": "@Html.Raw(settings?.PostalCode ?? "")",
            "addressCountry": "@Html.Raw(settings?.Country ?? "TR")"
        }
    },
    "breadcrumb": {
        "@@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@@type": "ListItem",
                "position": 1,
                "name": "Ana Sayfa",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")"
            },
            {
                "@@type": "ListItem",
                "position": 2,
                "name": "@Html.Raw("Hakkımızda")",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/hakkimizda") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/hakkimizda")"
            }
        ]
    }
}
</script>

<!-- FAQ Structured Data -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "FAQPage",
    "mainEntity": [
        {
            "@@type": "Question",
            "name": "@Html.Raw("Şişme oyun parkları güvenli midir?")",
            "acceptedAnswer": {
                "@@type": "Answer",
                "text": "@Html.Raw("Evet, tüm şişme oyun parklarımız uluslararası güvenlik standartlarına uygun olarak üretilir ve kaliteli malzemelerden yapılmıştır. Çocukların güvenliği bizim önceliğimizdir.")"
            }
        },
        {
            "@@type": "Question",
            "name": "@Html.Raw("Teslimat süresi ne kadardır?")",
            "acceptedAnswer": {
                "@@type": "Answer",
                "text": "@Html.Raw("Siparişleriniz genellikle 1-3 iş günü içinde kargoya verilir ve 2-5 iş günü içinde adresinize teslim edilir.")"
            }
        },
        {
            "@@type": "Question",
            "name": "@Html.Raw("Ürünlerin garantisi var mı?")",
            "acceptedAnswer": {
                "@@type": "Answer",
                "text": "@Html.Raw("Evet, tüm ürünlerimiz üretim hatalarına karşı garantilidir. Garanti süreleri ürüne göre değişiklik gösterebilir.")"
            }
        },
        {
            "@@type": "Question",
            "name": "@Html.Raw("Toplu sipariş indirimi var mı?")",
            "acceptedAnswer": {
                "@@type": "Answer",
                "text": "@Html.Raw("Evet, toplu siparişlerde özel fiyat teklifleri sunuyoruz. Detaylı bilgi için bizimle iletişime geçebilirsiniz.")"
            }
        }
    ]
}
</script>

<!-- About Section Start -->
<div class="about-section py-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="about-content">
                    <!-- Company Info -->
                    <div class="row mb-5">
                        <div class="col-lg-6 mb-4">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i data-lucide="building" class="w-5 h-5"></i>
                                </div>
                                <div class="info-content">
                                    <h3>Şirketimiz Hakkında</h3>
                                    <p>@(settings?.About ?? $"{settings?.CompanyName ?? "Balon Park"} olarak, çocukların güvenli ve eğlenceli oyun alanları yaratma konusunda uzmanlaşmış bir firmayız. Yılların deneyimi ve kaliteli ürün anlayışımızla, şişme oyun grupları sektöründe güvenilir bir marka haline geldik.")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i data-lucide="target" class="w-5 h-5"></i>
                                </div>
                                <div class="info-content">
                                    <h3>Misyonumuz</h3>
                                    <p>Çocukların güvenli, eğlenceli ve sağlıklı oyun alanlarına sahip olmalarını sağlamak. Kaliteli şişme oyun grupları, kaydıraklar, havuzlar ve diğer oyun ekipmanları ile çocukların hayal güçlerini geliştiren, sosyal becerilerini artıran oyun deneyimleri sunmak.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vision -->
                    <div class="row mb-5">
                        <div class="col-12">
                            <div class="vision-card">
                                <div class="vision-icon">
                                    <i data-lucide="eye" class="w-5 h-5"></i>
                                </div>
                                <div class="vision-content">
                                    <h3>Vizyonumuz</h3>
                                    <p>Türkiye'nin en güvenilir ve kaliteli şişme oyun grupları üreticisi olmak. Sektördeki liderliğimizi sürdürerek, sürekli yenilik ve gelişim ile müşteri memnuniyetini en üst seviyede tutmak.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="row">
                        <div class="col-12">
                            <div class="features-section">
                                <h3 class="features-title">Neden @(settings?.MetaTitle ?? companyName)?</h3>
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 mb-4">
                                        <div class="feature-card">
                                            <div class="feature-icon">
                                                <i data-lucide="shield-check" class="w-5 h-5"></i>
                                            </div>
                                            <h4>Güvenlik Önceliği</h4>
                                            <p>Tüm ürünlerimiz uluslararası güvenlik standartlarına uygun olarak üretilir.</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-4">
                                        <div class="feature-card">
                                            <div class="feature-icon">
                                                <i data-lucide="medal" class="w-5 h-5"></i>
                                            </div>
                                            <h4>Kalite Garantisi</h4>
                                            <p>Premium malzemeler kullanarak uzun ömürlü ve dayanıklı ürünler üretiriz.</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-4">
                                        <div class="feature-card">
                                            <div class="feature-icon">
                                                <i data-lucide="users" class="w-5 h-5"></i>
                                            </div>
                                            <h4>Uzman Ekip</h4>
                                            <p>Deneyimli ve uzman ekibimizle size en iyi hizmeti sunarız.</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-4">
                                        <div class="feature-card">
                                            <div class="feature-icon">
                                                <i data-lucide="headset" class="w-5 h-5"></i>
                                            </div>
                                            <h4>7/24 Destek</h4>
                                            <p>Müşteri memnuniyeti için her zaman yanınızdayız.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="contact-section">
                                <h3 class="contact-title">İletişim</h3>
                                <p class="contact-text">Ürünlerimiz hakkında detaylı bilgi almak veya sipariş vermek için bizimle iletişime geçebilirsiniz.</p>
                                <div class="contact-buttons">
                                    @if (!string.IsNullOrEmpty(settings?.WhatsApp))
                                    {
                                        <a href="https://wa.me/@(settings.WhatsApp.Replace("+", "").Replace(" ", ""))" target="_blank" class="contact-btn whatsapp-btn">
                                            <i data-lucide="message-circle" class="w-5 h-5"></i>
                                            <span>WhatsApp</span>
                                        </a>
                                    }
                                    @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
                                    {
                                        <a href="tel:@settings.PhoneNumber.Replace(" ", "")" class="contact-btn phone-btn">
                                            <i data-lucide="phone" class="w-5 h-5"></i>
                                            <span>Telefon</span>
                                        </a>
                                    }
                                    <a asp-page="/Iletisim" class="contact-btn contact-page-btn">
                                        <i data-lucide="mail" class="w-5 h-5"></i>
                                        <span>İletişim Sayfası</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About Section End -->

@section Styles {
<style>
/* Breadcrumb Section */
.breadcrumb-section {
    background: linear-gradient(135deg, #007bff, #0056b3);
    padding: 2rem 0;
    color: white;
}

.breadcrumb-title {
    color: white;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.breadcrumb {
    margin-bottom: 0;
}

.breadcrumb-item a {
    color: rgba(255,255,255,0.8);
    text-decoration: none;
}

.breadcrumb-item a:hover {
    color: white;
}

.breadcrumb-item.active {
    color: white;
}

/* About Section */
.about-section {
    background-color: #f8f9fa;
}

.section-title h2 {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
}

.section-subtitle {
    color: #666;
    font-size: 1.1rem;
}

/* Info Cards */
.info-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    height: 100%;
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
}

.info-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #007bff, #0056b3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
}

.info-content h3 {
    color: #333;
    font-weight: 600;
    margin-bottom: 1rem;
}

.info-content p {
    color: #666;
    line-height: 1.6;
    margin: 0;
}

/* Vision Card */
.vision-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 2rem;
    text-align: center;
}

.vision-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #28a745, #20c997);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    flex-shrink: 0;
}

.vision-content h3 {
    color: #333;
    font-weight: 600;
    margin-bottom: 1rem;
}

.vision-content p {
    color: #666;
    line-height: 1.6;
    margin: 0;
    font-size: 1.1rem;
}

/* Features Section */
.features-section {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.features-title {
    color: #333;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
}

.feature-card {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 1.5rem;
    text-align: center;
    height: 100%;
    transition: all 0.3s ease;
    border: 1px solid #e9ecef;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
}

.feature-card .feature-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #007bff, #0056b3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 1.2rem;
}

.feature-card h4 {
    color: #333;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.feature-card p {
    color: #666;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Contact Section */
.contact-section {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    text-align: center;
}

.contact-title {
    color: #333;
    font-weight: 600;
    margin-bottom: 1rem;
}

.contact-text {
    color: #666;
    margin-bottom: 2rem;
}

.contact-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
}

.whatsapp-btn {
    background-color: #25d366;
    color: white;
}

.whatsapp-btn:hover {
    background-color: #128c7e;
    color: white;
    transform: translateY(-2px);
}

.phone-btn {
    background-color: #007bff;
    color: white;
}

.phone-btn:hover {
    background-color: #0056b3;
    color: white;
    transform: translateY(-2px);
}

.contact-page-btn {
    background-color: #6c757d;
    color: white;
}

.contact-page-btn:hover {
    background-color: #545b62;
    color: white;
    transform: translateY(-2px);
}

/* Responsive Design */
@@media (max-width: 768px) {
    .info-card {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }
    
    .vision-card {
        flex-direction: column;
        gap: 1rem;
    }
    
    .contact-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .contact-btn {
        width: 200px;
        justify-content: center;
    }
}
</style>
}
