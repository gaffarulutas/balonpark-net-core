@page "/about"
@model HakkimizdaModel
@using System.Text.Json
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    var urlService = (IUrlService?)ViewData["UrlService"];
    var baseUrl = urlService?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/";
    var pageUrl = urlService?.GetPageUrl("/about") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/about";
    var logoUrl = settings?.Logo != null ? (urlService?.GetImageUrl(settings.Logo) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}{settings.Logo}") : (urlService?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");

    ViewData["Title"] = $"Hakkımızda | {companyName}";
    ViewData["Description"] = $"{companyName} hakkında bilgi alın. Kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve daha fazlası için güvenilir çözüm ortağınız.";
    ViewData["Keywords"] = "hakkımızda, balon park, şişme oyun grupları, kaliteli ürünler, güvenilir firma";
    ViewData["Image"] = logoUrl;
    var defaultDescription = "Türkiye'nin en kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve çocuk oyun grupları fabrikası. Güvenli, dayanıklı ve eğlenceli ürünler.";
    var aboutText = settings?.About ?? $"{companyName}, ailelere ve işletmelere şişme oyun parkı, kaydırak ve havuz çözümleri sunar. Çocukların güvenli ortamlarda oynaması için tasarlanmış ürünlerimizle sektörde güvenilir bir adres olmayı hedefliyoruz.";
}

<!-- About Page Structured Data (JSON-LD: tüm dinamik string'ler güvenli escape edilir) -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "AboutPage",
    "name": @Html.Raw(JsonSerializer.Serialize("Hakkımızda - " + companyName)),
    "description": @Html.Raw(JsonSerializer.Serialize(companyName + " hakkında bilgi alın. Kaliteli şişme oyun parkları, kaydıraklar, havuzlar ve daha fazlası için güvenilir çözüm ortağınız.")),
    "url": @Html.Raw(JsonSerializer.Serialize(pageUrl)),
    "mainEntity": {
        "@@type": "Organization",
        "name": @Html.Raw(JsonSerializer.Serialize(companyName)),
        "alternateName": @Html.Raw(JsonSerializer.Serialize(companyName.Replace(" ", ""))),
        "description": @Html.Raw(JsonSerializer.Serialize(settings?.About ?? defaultDescription)),
        "url": @Html.Raw(JsonSerializer.Serialize(baseUrl)),
        "logo": @Html.Raw(JsonSerializer.Serialize(logoUrl)),
        "foundingDate": "2020",
        "numberOfEmployees": "10-50",
        "industry": "Manufacturing",
        "knowsAbout": [
            "Şişme Oyun Parkları",
            "Çocuk Oyun Grupları",
            "Şişme Kaydıraklar",
            "Şişme Havuzlar",
            "Top Havuzları",
            "İç Mekan Oyun Parkları"
        ],
        "contactPoint": {
            "@@type": "ContactPoint",
            "contactType": "customer service",
            "telephone": @Html.Raw(JsonSerializer.Serialize(settings?.PhoneNumber ?? "")),
            "email": @Html.Raw(JsonSerializer.Serialize(settings?.Email ?? "")),
            "availableLanguage": ["Turkish", "English"],
            "areaServed": "TR"
        },
        "address": {
            "@@type": "PostalAddress",
            "streetAddress": @Html.Raw(JsonSerializer.Serialize(settings?.Address ?? "")),
            "addressLocality": @Html.Raw(JsonSerializer.Serialize(settings?.City ?? "Türkiye")),
            "addressRegion": @Html.Raw(JsonSerializer.Serialize(settings?.District ?? "")),
            "postalCode": @Html.Raw(JsonSerializer.Serialize(settings?.PostalCode ?? "")),
            "addressCountry": @Html.Raw(JsonSerializer.Serialize(settings?.Country ?? "TR"))
        }
    }
}
</script>
<!-- BreadcrumbList ayrı schema (AboutPage içinde breadcrumb alanı yok) -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "BreadcrumbList",
    "itemListElement": [
        { "@@type": "ListItem", "position": 1, "name": "Ana Sayfa", "item": @Html.Raw(JsonSerializer.Serialize(baseUrl)) },
        { "@@type": "ListItem", "position": 2, "name": "Hakkımızda", "item": @Html.Raw(JsonSerializer.Serialize(pageUrl)) }
    ]
}
</script>

<!-- FAQ Structured Data -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "FAQPage",
    "mainEntity": [
        {
            "@@type": "Question",
            "name": @Html.Raw(JsonSerializer.Serialize("Şişme oyun parkları güvenli midir?")),
            "acceptedAnswer": { "@@type": "Answer", "text": @Html.Raw(JsonSerializer.Serialize("Evet, Balon Park ürünleri uluslararası güvenlik standartlarına uygun olarak üretilir ve kaliteli malzemelerden yapılmıştır. Çocukların güvenliği bizim önceliğimizdir.")) }
        },
        {
            "@@type": "Question",
            "name": @Html.Raw(JsonSerializer.Serialize("Teslimat süresi ne kadardır?")),
            "acceptedAnswer": { "@@type": "Answer", "text": @Html.Raw(JsonSerializer.Serialize("Siparişleriniz genellikle 1-3 iş günü içinde kargoya verilir ve 2-5 iş günü içinde adresinize teslim edilir.")) }
        },
        {
            "@@type": "Question",
            "name": @Html.Raw(JsonSerializer.Serialize("Ürünlerin garantisi var mı?")),
            "acceptedAnswer": { "@@type": "Answer", "text": @Html.Raw(JsonSerializer.Serialize("Evet, tüm ürünlerimiz üretim hatalarına karşı garantilidir. Garanti süreleri ürüne göre değişiklik gösterebilir.")) }
        },
        {
            "@@type": "Question",
            "name": @Html.Raw(JsonSerializer.Serialize("Toplu sipariş indirimi var mı?")),
            "acceptedAnswer": { "@@type": "Answer", "text": @Html.Raw(JsonSerializer.Serialize("Evet, toplu siparişlerde özel fiyat teklifleri sunuyoruz. Detaylı bilgi için bizimle iletişime geçebilirsiniz.")) }
        }
    ]
}
</script>

<article class="space-y-12 md:space-y-16 pb-10" id="about-page-content">
    @await Html.PartialAsync("Shared/_Breadcrumb", new List<BreadcrumbItem>
    {
        BreadcrumbItem.Link("Ana Sayfa", "/"),
        BreadcrumbItem.Current("Hakkımızda")
    })

    <header class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <div class="space-y-4">
            <h1 class="text-3xl font-bold text-ink sm:text-4xl">Hakkımızda</h1>
            <p class="text-lg text-gray-600 max-w-3xl leading-relaxed">@aboutText</p>
        </div>
    </header>

    <section aria-label="Şirket ve misyon" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-8">
            <article class="flex gap-4">
                <figure class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="building-2" class="h-6 w-6" aria-hidden="true"></i>
                </figure>
                <div>
                    <h2 class="text-xl font-semibold text-ink mb-2">Şirketimiz</h2>
                    <p class="text-gray-600 leading-relaxed">Sektörde edindiğimiz tecrübeyle ev, kreş, AVM ve etkinlik mekânlarına yönelik şişme park, kaydırak, top havuzu ve softplay çözümleri üretiyoruz. Ürünlerimiz CE standartlarına uygun malzemelerle üretilir; kalite kontrol süreçlerimiz titizlikle yürütülür.</p>
                </div>
            </article>
            <article class="flex gap-4">
                <figure class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="target" class="h-6 w-6" aria-hidden="true"></i>
                </figure>
                <div>
                    <h2 class="text-xl font-semibold text-ink mb-2">Misyonumuz</h2>
                    <p class="text-gray-600 leading-relaxed">Her çocuğun güvenli ve eğlenceli oyun alanlarına erişmesine katkı sunmak. Hem bireysel hem kurumsal müşterilerimize dayanıklı, ekonomik ve güvenilir şişme oyun grupları sunarak alanında referans marka olmak.</p>
                </div>
            </article>
        </div>
    </section>

    <section aria-labelledby="vision-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <div class="flex flex-col gap-6 sm:flex-row sm:items-center">
            <figure class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-primary text-white" aria-hidden="true">
                <i data-lucide="eye" class="h-7 w-7" aria-hidden="true"></i>
            </figure>
            <div class="min-w-0 flex-1 text-center sm:text-left">
                <h2 id="vision-heading" class="text-xl font-semibold text-ink mb-2">Vizyonumuz</h2>
                <p class="text-gray-600 leading-relaxed max-w-3xl">Yurt içi ve yurt dışında şişme oyun parkı ve çocuk eğlence ürünlerinde ilk akla gelen, yenilikçi ve güvenilir marka olmak. Kalite ve müşteri memnuniyetini sürekli artırarak sektörde lider konumumuzu pekiştirmek.</p>
            </div>
        </div>
    </section>

    <section aria-labelledby="reasons-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <h2 id="reasons-heading" class="text-2xl font-semibold text-ink mb-6 text-center">Neden Balon Park?</h2>
        <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 md:gap-8" role="list">
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <figure class="w-11 h-11 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-3" aria-hidden="true">
                    <i data-lucide="shield-check" class="w-5 h-5" aria-hidden="true"></i>
                </figure>
                <h3 class="font-semibold text-ink mb-1.5">Güvenlik Önceliği</h3>
                <p class="text-sm text-gray-600 leading-relaxed">CE uyumlu ve uluslararası standartlara uygun malzemelerle üretim; çocuk güvenliği her zaman ön planda.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <figure class="w-11 h-11 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-3" aria-hidden="true">
                    <i data-lucide="award" class="w-5 h-5" aria-hidden="true"></i>
                </figure>
                <h3 class="font-semibold text-ink mb-1.5">Kalite Garantisi</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Seçkin hammadde ve kontrollü üretimle uzun ömürlü, dayanıklı ürünler.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <figure class="w-11 h-11 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-3" aria-hidden="true">
                    <i data-lucide="users" class="w-5 h-5" aria-hidden="true"></i>
                </figure>
                <h3 class="font-semibold text-ink mb-1.5">Uzman Ekip</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Alanında uzman kadromuzla doğru ürün önerisi ve satış sonrası teknik destek.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <figure class="w-11 h-11 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-3" aria-hidden="true">
                    <i data-lucide="headset" class="w-5 h-5" aria-hidden="true"></i>
                </figure>
                <h3 class="font-semibold text-ink mb-1.5">Müşteri Desteği</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Sipariş öncesi ve sonrası hızlı yanıt ve çözüm odaklı iletişim.</p>
            </li>
        </ul>
    </section>

    <section aria-labelledby="contact-heading" class="rounded-xl border border-gray-100 bg-white p-6 text-center shadow-sm md:p-8">
        <h2 id="contact-heading" class="text-xl font-semibold text-ink mb-2">Bizimle İletişime Geçin</h2>
        <p class="text-gray-600 mb-6 max-w-xl mx-auto">Fiyat teklifi, toplu sipariş veya ürün detayları için aşağıdaki kanallardan bize yazabilir veya arayabilirsiniz.</p>
        <nav class="flex flex-col flex-wrap items-center justify-center gap-3 sm:flex-row" aria-label="İletişim kanalları">
            @if (!string.IsNullOrEmpty(settings?.WhatsApp))
            {
                <a href="https://wa.me/@(new string(settings.WhatsApp.Where(c => char.IsDigit(c) || c == '+').ToArray()))" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-green-500 text-white font-medium hover:bg-green-600 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="message-circle" class="w-5 h-5" aria-hidden="true"></i>
                    <span>WhatsApp</span>
                </a>
            }
            @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
            {
                <a href="tel:@(new string(settings.PhoneNumber.Where(c => char.IsDigit(c) || c == '+').ToArray()))" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="phone" class="w-5 h-5" aria-hidden="true"></i>
                    <span>Telefon</span>
                </a>
            }
            <a asp-page="/Iletisim" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gray-100 text-ink font-medium hover:bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                <i data-lucide="mail" class="w-5 h-5" aria-hidden="true"></i>
                <span>İletişim Formu</span>
            </a>
        </nav>
    </section>
</article>
