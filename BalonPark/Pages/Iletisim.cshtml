@page
@model BalonPark.Pages.IletisimModel
@using System.Collections.Generic
@using System.Linq
@{
    ViewData["Title"] = "İletişim";
    var settingsForImage = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyNameForDesc = settingsForImage?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Description"] = $"{companyNameForDesc} iletişim bilgileri, adres ve telefon numaraları.";
    ViewData["Keywords"] = "iletişim, adres, telefon, email, balon park, şişme oyun grupları";
    ViewData["Image"] = settingsForImage?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settingsForImage.Logo) ?? settingsForImage.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
}

@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";

    var sameAsLinks = new List<string>();
    if (!string.IsNullOrEmpty(settings?.WhatsApp))
        sameAsLinks.Add($"https://wa.me/{settings.WhatsApp.Replace("+", "").Replace(" ", "")}");
    if (!string.IsNullOrEmpty(settings?.Facebook))
        sameAsLinks.Add(settings.Facebook);
    if (!string.IsNullOrEmpty(settings?.Instagram))
        sameAsLinks.Add(settings.Instagram);
    if (!string.IsNullOrEmpty(settings?.Twitter))
        sameAsLinks.Add(settings.Twitter);
    if (!string.IsNullOrEmpty(settings?.LinkedIn))
        sameAsLinks.Add(settings.LinkedIn);
}
<!-- Contact Page Structured Data -->
<script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "ContactPage",
        "name": "@Html.Raw("İletişim - " + companyName)",
    "description": "@Html.Raw(companyName + " iletişim bilgileri, adres ve telefon numaraları.")",
    "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/iletisim") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/iletisim")",
    "mainEntity": {
        "@@type": "Organization",
        "name": "@Html.Raw(companyName)",
        "alternateName": "@Html.Raw(companyName.Replace(" ", ""))",
        "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")",
        "logo": "@(settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}{settings.Logo}") : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png"))",
        "contactPoint": [
            {
                "@@type": "ContactPoint",
                "contactType": "customer service",
                "telephone": "@Html.Raw(settings?.PhoneNumber ?? "+90-533-635-50-39")",
                "email": "@Html.Raw(settings?.Email ?? "info@balonpark.com")",
                "availableLanguage": ["Turkish", "English"],
                "contactOption": "TollFree",
                "areaServed": "TR",
                "hoursAvailable": {
                    "@@type": "OpeningHoursSpecification",
                    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
                    "opens": "00:00",
                    "closes": "23:59"
                }
            },
            {
                "@@type": "ContactPoint",
                "contactType": "sales",
                "telephone": "@Html.Raw(settings?.PhoneNumber ?? "+90-533-635-50-39")",
                "email": "@Html.Raw(settings?.Email ?? "info@balonpark.com")",
                "availableLanguage": ["Turkish", "English"],
                "contactOption": "TollFree",
                "areaServed": "TR"
            }
        ],
        "address": {
            "@@type": "PostalAddress",
            "streetAddress": "@Html.Raw(settings?.Address ?? "")",
            "addressLocality": "@Html.Raw(settings?.City ?? "Türkiye")",
            "addressRegion": "@Html.Raw(settings?.District ?? "")",
            "postalCode": "@Html.Raw(settings?.PostalCode ?? "")",
            "addressCountry": "@Html.Raw(settings?.Country ?? "TR")"
        },
        "sameAs": [@Html.Raw(string.Join(", ", sameAsLinks.Select(l => $"\"{l}\"")))]
    },
    "breadcrumb": {
        "@@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@@type": "ListItem",
                "position": 1,
                "name": "Ana Sayfa",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")"
            },
            {
                "@@type": "ListItem",
                "position": 2,
                "name": "@Html.Raw("İletişim")",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/iletisim") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/iletisim")"
            }
        ]
    }
}
</script>

<!-- Contact Section - Ana sayfa ile aynı Tailwind tasarım dili -->
<div class="space-y-4 sm:space-y-6">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-gray-500" aria-label="Breadcrumb">
        <a asp-page="/Index" class="inline-flex items-center gap-1.5 text-gray-500 hover:text-primary transition">
            <i data-lucide="home" class="w-4 h-4"></i>
            Ana Sayfa
        </a>
        <span aria-hidden="true">/</span>
        <span class="text-ink font-medium">İletişim</span>
    </nav>

    <!-- Section header (Index ile aynı stil) -->
    <div class="pt-1 pb-2.5 border-b border-gray-100">
        <h2 class="text-ink text-base font-medium">İletişim</h2>
        <p class="text-gray-400 text-xs mt-0.5">Bizimle iletişime geçin; sorularınız için aşağıdaki bilgileri kullanın veya formu doldurun.</p>
    </div>

    <!-- Contact info cards (Index ürün kartları gibi: bg-white rounded border border-gray-100) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Adres -->
        <div class="bg-white rounded border border-gray-100 overflow-hidden hover:border-gray-200 hover:bg-gray-50/50 transition-all duration-200 flex flex-col p-4 text-center">
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-white mx-auto mb-3">
                <i data-lucide="map-pin" class="w-5 h-5"></i>
            </div>
            <h3 class="font-medium text-sm text-ink mb-1">Adresimiz</h3>
            @if (!string.IsNullOrEmpty(settings?.Address))
            {
                <p class="text-xs text-gray-500 line-clamp-3">
                    @Html.Raw(settings.Address)
                    @if (!string.IsNullOrEmpty(settings.District) || !string.IsNullOrEmpty(settings.City))
                    {
                        <br>
                        @Html.Raw(settings.PostalCode)
                        @Html.Raw(settings.District)
                        @Html.Raw(settings.City)
                    }
                </p>
            }
            else
            {
                <p class="text-xs text-gray-500">Türkiye</p>
            }
        </div>

        <!-- E-posta -->
        <div class="bg-white rounded border border-gray-100 overflow-hidden hover:border-gray-200 hover:bg-gray-50/50 transition-all duration-200 flex flex-col p-4 text-center">
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-white mx-auto mb-3">
                <i data-lucide="mail" class="w-5 h-5"></i>
            </div>
            <h3 class="font-medium text-sm text-ink mb-1">E-posta</h3>
            <p class="text-xs">
                <a href="mailto:@settings?.Email" class="text-primary hover:text-primary-dark hover:underline transition">@Html.Raw(settings?.Email)</a>
            </p>
        </div>

        <!-- Telefon -->
        <div class="bg-white rounded border border-gray-100 overflow-hidden hover:border-gray-200 hover:bg-gray-50/50 transition-all duration-200 flex flex-col p-4 text-center">
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-white mx-auto mb-3">
                <i data-lucide="phone" class="w-5 h-5"></i>
            </div>
            <h3 class="font-medium text-sm text-ink mb-1">Telefon</h3>
            <p class="text-xs">
                @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
                {
                    <a href="tel:@settings.PhoneNumber.Replace(" ", "")" class="text-primary hover:text-primary-dark hover:underline transition">@Html.Raw(settings.PhoneNumber)</a>
                }
                @if (!string.IsNullOrEmpty(settings?.PhoneNumber2))
                {
                    <br>
                    <a href="tel:@settings.PhoneNumber2.Replace(" ", "")" class="text-primary hover:text-primary-dark hover:underline transition">@Html.Raw(settings.PhoneNumber2)</a>
                }
            </p>
        </div>

        <!-- WhatsApp -->
        <div class="bg-white rounded border border-gray-100 overflow-hidden hover:border-gray-200 hover:bg-gray-50/50 transition-all duration-200 flex flex-col p-4 text-center">
            <div class="w-10 h-10 rounded-full bg-[#25d366] flex items-center justify-center text-white mx-auto mb-3">
                <i data-lucide="message-circle" class="w-5 h-5"></i>
            </div>
            <h3 class="font-medium text-sm text-ink mb-1">WhatsApp</h3>
            <p class="text-xs">
                <a href="https://wa.me/@(settings?.WhatsApp?.Replace("+", "").Replace(" ", ""))" target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-dark hover:underline transition">@Html.Raw(settings?.WhatsApp)</a>
            </p>
        </div>
    </div>

    <!-- Çalışma saatleri + Form -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <!-- Çalışma saatleri kartı -->
        <div class="bg-white rounded border border-gray-100 overflow-hidden hover:border-gray-200 transition-all duration-200 p-4 lg:col-span-1">
            <div class="flex items-center gap-2 mb-3">
                <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-white flex-shrink-0">
                    <i data-lucide="clock" class="w-4 h-4"></i>
                </div>
                <h3 class="text-ink text-base font-medium">Çalışma Saatleri</h3>
            </div>
            @if (!string.IsNullOrEmpty(settings?.WorkingHours))
            {
                <p class="text-sm text-gray-500">@Html.Raw(settings.WorkingHours)</p>
            }
            else
            {
                <div class="space-y-1.5 text-sm">
                    <div class="flex justify-between text-gray-500">
                        <span>Pazartesi - Cuma</span>
                        <span class="font-medium text-ink">09:00 - 18:00</span>
                    </div>
                    <div class="flex justify-between text-gray-500">
                        <span>Cumartesi</span>
                        <span class="font-medium text-ink">09:00 - 16:00</span>
                    </div>
                    <div class="flex justify-between text-gray-500">
                        <span>Pazar</span>
                        <span class="font-medium text-ink">Kapalı</span>
                    </div>
                </div>
            }
        </div>

        <!-- Form alanı -->
        <div class="lg:col-span-2 space-y-4">
            @if (Model.IsEmailSent)
            {
                <div class="flex items-center gap-2 p-3 rounded border border-green-200 bg-green-50 text-green-800 text-sm" role="alert">
                    <i data-lucide="check-circle" class="w-5 h-5 flex-shrink-0"></i>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="flex items-center gap-2 p-3 rounded border border-red-200 bg-red-50 text-red-800 text-sm" role="alert">
                    <i data-lucide="circle-alert" class="w-5 h-5 flex-shrink-0"></i>
                    <span>@Model.ErrorMessage</span>
                </div>
            }

            <div class="bg-white rounded border border-gray-100 overflow-hidden p-4 sm:p-5">
                <h3 class="text-ink text-base font-medium mb-4">Mesaj Gönderin</h3>
                <form method="post" asp-page-handler="OnPostAsync" class="space-y-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ContactForm.Name" class="block text-sm font-medium text-ink mb-1">Ad Soyad <span class="text-red-500">*</span></label>
                            <input asp-for="ContactForm.Name" class="w-full rounded border border-gray-200 px-3.5 py-2 text-sm text-ink placeholder-gray-400 transition focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary hover:border-gray-300" placeholder="Adınız ve soyadınız">
                            <span asp-validation-for="ContactForm.Name" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="ContactForm.Email" class="block text-sm font-medium text-ink mb-1">E-posta <span class="text-red-500">*</span></label>
                            <input asp-for="ContactForm.Email" class="w-full rounded border border-gray-200 px-3.5 py-2 text-sm text-ink placeholder-gray-400 transition focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary hover:border-gray-300" placeholder="ornek@email.com">
                            <span asp-validation-for="ContactForm.Email" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ContactForm.Phone" class="block text-sm font-medium text-ink mb-1">Telefon</label>
                            <input asp-for="ContactForm.Phone" class="w-full rounded border border-gray-200 px-3.5 py-2 text-sm text-ink placeholder-gray-400 transition focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary hover:border-gray-300" placeholder="+90 5XX XXX XX XX">
                            <span asp-validation-for="ContactForm.Phone" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="ContactForm.Subject" class="block text-sm font-medium text-ink mb-1">Konu <span class="text-red-500">*</span></label>
                            <input asp-for="ContactForm.Subject" class="w-full rounded border border-gray-200 px-3.5 py-2 text-sm text-ink placeholder-gray-400 transition focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary hover:border-gray-300" placeholder="Mesajınızın konusu">
                            <span asp-validation-for="ContactForm.Subject" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="ContactForm.Message" class="block text-sm font-medium text-ink mb-1">Mesaj <span class="text-red-500">*</span></label>
                        <textarea asp-for="ContactForm.Message" rows="4" class="w-full rounded border border-gray-200 px-3.5 py-2 text-sm text-ink placeholder-gray-400 transition focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary hover:border-gray-300 resize-y min-h-[100px]" placeholder="Mesajınızı buraya yazın..."></textarea>
                        <span asp-validation-for="ContactForm.Message" class="text-red-500 text-xs"></span>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary-dark text-white rounded-lg font-medium text-sm transition">
                            <i data-lucide="send" class="w-4 h-4"></i>
                            Mesajı Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
