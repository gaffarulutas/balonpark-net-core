@page
@model BalonPark.Pages.IletisimModel
@using System.Collections.Generic
@using System.Linq
@{
    ViewData["Title"] = "İletişim";
    var settingsForImage = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyNameForDesc = settingsForImage?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Description"] = $"{companyNameForDesc} iletişim bilgileri, adres ve telefon numaraları.";
    ViewData["Keywords"] = "iletişim, adres, telefon, email, ünlü park, şişme oyun grupları";
    ViewData["Image"] = settingsForImage?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settingsForImage.Logo) ?? settingsForImage.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
}

@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    
    var sameAsLinks = new List<string>();
    if (!string.IsNullOrEmpty(settings?.WhatsApp))
        sameAsLinks.Add($"https://wa.me/{settings.WhatsApp.Replace("+", "").Replace(" ", "")}");
    if (!string.IsNullOrEmpty(settings?.Facebook))
        sameAsLinks.Add(settings.Facebook);
    if (!string.IsNullOrEmpty(settings?.Instagram))
        sameAsLinks.Add(settings.Instagram);
    if (!string.IsNullOrEmpty(settings?.Twitter))
        sameAsLinks.Add(settings.Twitter);
    if (!string.IsNullOrEmpty(settings?.LinkedIn))
        sameAsLinks.Add(settings.LinkedIn);
}
<!-- Contact Page Structured Data -->
<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "ContactPage",
    "name": "@Html.Raw("İletişim - " + companyName)",
    "description": "@Html.Raw(companyName + " iletişim bilgileri, adres ve telefon numaraları.")",
    "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/iletisim") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/iletisim")",
    "mainEntity": {
        "@@type": "Organization",
        "name": "@Html.Raw(companyName)",
        "alternateName": "@Html.Raw(companyName.Replace(" ", ""))",
        "url": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")",
        "logo": "@(settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}{settings.Logo}") : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png"))",
        "contactPoint": [
            {
                "@@type": "ContactPoint",
                "contactType": "customer service",
                "telephone": "@Html.Raw(settings?.PhoneNumber ?? "+90-533-635-50-39")",
                "email": "@Html.Raw(settings?.Email ?? "info@balonpark.com")",
                "availableLanguage": ["Turkish", "English"],
                "contactOption": "TollFree",
                "areaServed": "TR",
                "hoursAvailable": {
                    "@@type": "OpeningHoursSpecification",
                    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
                    "opens": "00:00",
                    "closes": "23:59"
                }
            },
            {
                "@@type": "ContactPoint",
                "contactType": "sales",
                "telephone": "@Html.Raw(settings?.PhoneNumber ?? "+90-533-635-50-39")",
                "email": "@Html.Raw(settings?.Email ?? "info@balonpark.com")",
                "availableLanguage": ["Turkish", "English"],
                "contactOption": "TollFree",
                "areaServed": "TR"
            }
        ],
        "address": {
            "@@type": "PostalAddress",
            "streetAddress": "@Html.Raw(settings?.Address ?? "")",
            "addressLocality": "@Html.Raw(settings?.City ?? "Türkiye")",
            "addressRegion": "@Html.Raw(settings?.District ?? "")",
            "postalCode": "@Html.Raw(settings?.PostalCode ?? "")",
            "addressCountry": "@Html.Raw(settings?.Country ?? "TR")"
        },
        "sameAs": [@Html.Raw(string.Join(", ", sameAsLinks.Select(l => $"\"{l}\"")))]
    },
    "breadcrumb": {
        "@@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@@type": "ListItem",
                "position": 1,
                "name": "Ana Sayfa",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/")"
            },
            {
                "@@type": "ListItem",
                "position": 2,
                "name": "@Html.Raw("İletişim")",
                "item": "@(((IUrlService?)ViewData["UrlService"])?.GetPageUrl("/iletisim") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/iletisim")"
            }
        ]
    }
}
</script>

<!-- Contact Section Start -->
<div class="iletisim-contact-section py-5">
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb-nav">
            <div class="breadcrumb-container">
                <a href="/" class="breadcrumb-item">
                    <i class="fas fa-home"></i>
                    <span>Ana Sayfa</span>
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-item active">İletişim</span>
            </div>
        </nav>
        
        <div class="row">
            <!-- Contact Information - Left Side -->
            <div class="col-lg-8 mb-4">
                <div class="iletisim-contact-info-card">
                    <div class="row">
                        <!-- Address Card -->
                        <div class="col-md-6 mb-4">
                            <div class="iletisim-contact-card h-100">
                                <div class="iletisim-contact-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="iletisim-contact-content">
                                    <h4>Adresimiz</h4>
                                    @if (!string.IsNullOrEmpty(settings?.Address))
                                    {
                                        <p>@Html.Raw(settings.Address)
                                        @if (!string.IsNullOrEmpty(settings.District) || !string.IsNullOrEmpty(settings.City))
                                        {
                                            <br>@Html.Raw(settings.PostalCode) @Html.Raw(settings.District) @Html.Raw(settings.City)
                                        }
                                        </p>
                                    }
                                    else
                                    {
                                        <p>Türkiye</p>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Email Card -->
                        <div class="col-md-6 mb-4">
                            <div class="iletisim-contact-card h-100">
                                <div class="iletisim-contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="iletisim-contact-content">
                                    <h4>E-posta</h4>
                                    <p><a href="mailto:@settings?.Email">@Html.Raw(settings?.Email)</a></p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Phone Card -->
                        <div class="col-md-6 mb-4">
                            <div class="iletisim-contact-card h-100">
                                <div class="iletisim-contact-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="iletisim-contact-content">
                                    <h4>Telefon</h4>
                                    <p>
                                        @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
                                        {
                                            <a href="tel:@settings.PhoneNumber.Replace(" ", "")">@Html.Raw(settings.PhoneNumber)</a>
                                        }
                                        @if (!string.IsNullOrEmpty(settings?.PhoneNumber2))
                                        {
                                            <br><a href="tel:@settings.PhoneNumber2.Replace(" ", "")">@Html.Raw(settings.PhoneNumber2)</a>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- WhatsApp Card -->
                        <div class="col-md-6 mb-4">
                            <div class="iletisim-contact-card h-100">
                                <div class="iletisim-contact-icon">
                                    <i class="fab fa-whatsapp"></i>
                                </div>
                                <div class="iletisim-contact-content">
                                    <h4>WhatsApp</h4>
                                    <p><a href="https://wa.me/@(settings?.WhatsApp?.Replace("+", "").Replace(" ", ""))" target="_blank">@Html.Raw(settings?.WhatsApp)</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            
            <!-- Working Hours - Right Side -->
            <div class="col-lg-4 mb-4">
                <div class="iletisim-working-hours-card text-center">
                    <h4>Çalışma Saatleri</h4>
                    <div class="hours-list">
                        @if (!string.IsNullOrEmpty(settings?.WorkingHours))
                        {
                            <p class="text-center">@Html.Raw(settings.WorkingHours)</p>
                        }
                        else
                        {
                            <div class="iletisim-hours-item">
                                <span class="iletisim-day">Pazartesi - Cuma:</span>
                                <span class="iletisim-time">09:00 - 18:00</span>
                            </div>
                            <div class="iletisim-hours-item">
                                <span class="iletisim-day">Cumartesi:</span>
                                <span class="iletisim-time">09:00 - 16:00</span>
                            </div>
                            <div class="iletisim-hours-item">
                                <span class="iletisim-day">Pazar:</span>
                                <span class="iletisim-time">Kapalı</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                @if (Model.IsEmailSent)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <!-- Contact Form -->
                <div class="iletisim-form-card">
                    <form method="post" asp-page-handler="OnPostAsync">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Name" class="form-label">Ad Soyad <span class="text-danger">*</span></label>
                                <input asp-for="ContactForm.Name" class="form-control" placeholder="Adınız ve soyadınız">
                                <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Email" class="form-label">E-posta <span class="text-danger">*</span></label>
                                <input asp-for="ContactForm.Email" class="form-control" placeholder="ornek@email.com">
                                <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Phone" class="form-label">Telefon</label>
                                <input asp-for="ContactForm.Phone" class="form-control" placeholder="+90 5XX XXX XX XX">
                                <span asp-validation-for="ContactForm.Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Subject" class="form-label">Konu <span class="text-danger">*</span></label>
                                <input asp-for="ContactForm.Subject" class="form-control" placeholder="Mesajınızın konusu">
                                <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ContactForm.Message" class="form-label">Mesaj <span class="text-danger">*</span></label>
                            <textarea asp-for="ContactForm.Message" class="form-control" rows="6" placeholder="Mesajınızı buraya yazın..."></textarea>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn iletisim-submit-btn">
                                <i class="fas fa-paper-plane me-2"></i>
                                Mesajı Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
            </div>
        </div>
  
</div>
<!-- Contact Section End -->
 

@section Styles {
<style>
/* Contact Page Specific Styles */
.iletisim-contact-section {
    background-color: #f8f9fa;
}

.iletisim-contact-info-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.iletisim-contact-card {
    background: #fff;
    border-radius: 10px;
    padding: 1.5rem;
    text-align: center;
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
    height: 100%;
}

.iletisim-contact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
}

.iletisim-contact-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #6c757d, #495057);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 1.5rem;
}

.iletisim-contact-content h4 {
    color: #333;
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.iletisim-contact-content p {
    color: #666;
    margin-bottom: 0;
}

.iletisim-contact-content a {
    color: #6c757d;
    text-decoration: none;
    font-weight: 500;
}

.iletisim-contact-content a:hover {
    color: #495057;
    text-decoration: underline;
}

.iletisim-working-hours-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.iletisim-working-hours-card h4 {
    color: #333;
    margin-bottom: 1.5rem;
    font-weight: 600;
}

.iletisim-hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e9ecef;
}

.iletisim-hours-item:last-child {
    border-bottom: none;
}

.iletisim-day {
    font-weight: 500;
    color: #333;
}

.iletisim-time {
    color: #6c757d;
    font-weight: 600;
}

.iletisim-section-title h2 {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
}

.iletisim-section-subtitle {
    color: #666;
    font-size: 1.1rem;
}

.iletisim-breadcrumb-section {
    background: linear-gradient(135deg, #6c757d, #495057);
    padding: 2rem 0;
    color: white;
}

.iletisim-breadcrumb-title {
    color: white;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.iletisim-breadcrumb {
    margin-bottom: 0;
}

.iletisim-breadcrumb-item a {
    color: rgba(255,255,255,0.8);
    text-decoration: none;
}

.iletisim-breadcrumb-item a:hover {
    color: white;
}

.iletisim-breadcrumb-item.active {
    color: white;
}

/* Contact Form Styles */
.iletisim-form-section {
    background-color: #ffffff;
}

.iletisim-form-title h2 {
    color: #333;
    font-weight: 700;
    margin-bottom: 1rem;
}

.iletisim-form-subtitle {
    color: #666;
    font-size: 1.1rem;
}

.iletisim-form-card {
    background: white;
    border-radius: 15px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e9ecef;
}

.iletisim-form-card .form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
}

.iletisim-form-card .form-control {
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.iletisim-form-card .form-control:focus {
    border-color: #6c757d;
    box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
}

.iletisim-form-card textarea.form-control {
    resize: vertical;
    min-height: 120px;
}

.iletisim-submit-btn {
    background: linear-gradient(135deg, #6c757d, #495057);
    border: none;
    color: white;
    padding: 0.75rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.iletisim-submit-btn:hover {
    background: linear-gradient(135deg, #495057, #343a40);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    color: white;
}

.iletisim-submit-btn:active {
    transform: translateY(0);
}

.alert {
    border-radius: 8px;
    border: none;
    font-weight: 500;
}

.alert-success {
    background-color: #d1edff;
    color: #0c5460;
    border-left: 4px solid #28a745;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border-left: 4px solid #dc3545;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .iletisim-contact-info-card {
        padding: 1.5rem;
    }
    
    .iletisim-working-hours-card {
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .iletisim-contact-card {
        margin-bottom: 1rem;
    }
    
    .iletisim-form-card {
        padding: 1.5rem;
    }
    
    .iletisim-submit-btn {
        width: 100%;
        padding: 1rem;
    }
}
</style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
