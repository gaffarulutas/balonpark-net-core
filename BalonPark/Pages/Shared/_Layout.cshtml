                                searchResponse.results.forEach(function(item) {
                                    if (item && item.type) {
                                        var typeKey = item.type;
                                        
                                        if (!response.results[typeKey]) {
                                            response.results[typeKey] = {
                                                name: getTypeDisplayName(typeKey),
                                                results: []
                                            };
                                        }
                                        
                                        response.results[typeKey].results.push({
                                            title: item.title || '',
                                            url: item.url || '',
                                            image: item.image || '',
                                            price: item.price || '',
                                            category: item.category || ''
                                        });
                                    }
                                });
                            }

                            console.log('Formatted Response:', response);
                            console.log('Formatted Response Structure:', JSON.stringify(response, null, 2));
                            return response;
                        }
                    },
                    fields: {
                        results: 'results',
                        title: 'title', 
                        url: 'url'
                    },
                    minCharacters: 2,
                    onSelect: function(result, response) {
                        if (result.url) {
                            window.location.href = result.url;
                        }
                    },
                    // Remove custom templates to use Semantic UI defaults
                    // templates: {
                    //     category: function(response, category, html) { ... },
                    //     result: function(result, html) { ... }
                    // }
                });
        });

        function getTypeDisplayName(type) {
            switch(type) {
                case 'product':
                    return 'Ürünler';
                case 'category':
                    return 'Kategoriler';
                case 'subcategory':
                    return 'Alt Kategoriler';
                default:
                    return 'Sonuçlar';
            }
        }

        // Search popup'ının kapanmasını önle
        $(document).on('click', '.ui.category.search .prompt', function(e) {
            e.stopPropagation();
            $(this).focus();
        });

        $(document).on('click', '.ui.category.search .results', function(e) {
            e.stopPropagation();
        });

        // Dışarı tıklandığında kapat
        $(document).on('click', function(e) {
            if (!$(e.target).closest('.ui.category.search').length) {
                $('.ui.category.search').search('hide');
            }
        });
    </script>

    <!-- Currency Management JavaScript -->
    <script>
        function setCurrency(currency) {
            // API'ye para birimi değişikliği gönder
            fetch('/api/currency/set', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ currency: currency })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Tüm currency butonlarından active class'ını kaldır
                    document.querySelectorAll('.currency-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    
                    // Seçilen currency butonuna active class'ını ekle
                    const selectedBtn = document.querySelector(`[data-currency="${currency}"]`);
                    if (selectedBtn) {
                        selectedBtn.classList.add('active');
                    }
                    
                    // Sayfayı yenile
                    window.location.reload();
                } else {
                    console.error('Currency değiştirilemedi:', data.message);
                }
            })
            .catch(error => {
                console.error('Currency değiştirilirken hata oluştu:', error);
            });
        }

        // Sayfa yüklendiğinde mevcut currency'yi kontrol et
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/api/currency/current')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Tüm currency butonlarından active class'ını kaldır
                        document.querySelectorAll('.currency-btn').forEach(btn => {
                            btn.classList.remove('active');
                        });
                        
                        // Mevcut currency butonuna active class'ını ekle
                        const currentBtn = document.querySelector(`[data-currency="${data.currency}"]`);
                        if (currentBtn) {
                            currentBtn.classList.add('active');
                        }
                    }
                })
                .catch(error => {
                    console.error('Mevcut currency alınırken hata oluştu:', error);
                });
        });

        // Favorites & Compare Functions
        function showFavorites() {
            const favorites = window.favoritesAndCompare.getFavorites();
            if (favorites.length === 0) {
                alert('Favori listesi boş');
                return;
            }
            
            // Favori listesini göster (modal veya yeni sayfa)
            let favoritesHtml = '<div class="favorites-modal"><h3>Favori Ürünlerim</h3><div class="favorites-grid">';
            
            favorites.forEach(item => {
                favoritesHtml += `
                    <div class="favorites-item">
                        <img src="${item.image}" alt="${item.name}" class="product-image">
                        <div class="product-info">
                            <div class="product-name">${item.name}</div>
                            <div class="product-price">${item.price}</div>
                            <div class="product-actions">
                                <a href="${item.url}" class="btn btn-primary btn-sm">Ürüne Git</a>
                                <button class="btn btn-outline-danger btn-sm" onclick="removeFromFavorites(${item.id})">Kaldır</button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            favoritesHtml += '</div></div>';
            
            // Modal göster (basit implementasyon)
            const modal = document.createElement('div');
            modal.className = 'favorites-modal-overlay';
            modal.innerHTML = `
                <div class="favorites-modal-content">
                    <div class="modal-header">
                        <h3>Favori Ürünlerim (${favorites.length})</h3>
                        <button onclick="this.closest('.favorites-modal-overlay').remove()" class="close-btn">&times;</button>
                    </div>
                    <div class="favorites-grid">
                        ${favorites.map(item => `
                            <div class="favorites-item">
                                <img src="${item.image}" alt="${item.name}" class="product-image">
                                <div class="product-info">
                                    <div class="product-name">${item.name}</div>
                                    <div class="product-price">${item.price}</div>
                                    <div class="product-actions">
                                        <a href="${item.url}" class="btn btn-primary btn-sm">Ürüne Git</a>
                                        <button class="btn btn-outline-danger btn-sm" onclick="removeFromFavorites(${item.id}); this.closest('.favorites-modal-overlay').remove();">Kaldır</button>
                                    </div>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
        }

        function showCompare() {
            const compareList = window.favoritesAndCompare.getCompareList();
            if (compareList.length === 0) {
                alert('Karşılaştırma listesi boş');
                return;
            }
            
            // Karşılaştırma sayfasına yönlendir veya modal göster
            if (compareList.length === 1) {
                alert('En az 2 ürün karşılaştırmanız gerekiyor');
                return;
            }
            
            // Karşılaştırma modal'ı göster
            const modal = document.createElement('div');
            modal.className = 'compare-modal-overlay';
            modal.innerHTML = `
                <div class="compare-modal-content">
                    <div class="modal-header">
                        <h3>Ürün Karşılaştırması (${compareList.length})</h3>
                        <button onclick="this.closest('.compare-modal-overlay').remove()" class="close-btn">&times;</button>
                    </div>
                    <div class="compare-table-container">
                        <table class="compare-table">
                            <thead>
                                <tr>
                                    <th>Özellik</th>
                                    ${compareList.map(item => `<th class="product-cell">${item.name}</th>`).join('')}
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Resim</td>
                                    ${compareList.map(item => `
                                        <td class="product-cell">
                                            <img src="${item.image}" alt="${item.name}" class="product-image">
                                        </td>
                                    `).join('')}
                                </tr>
                                <tr>
                                    <td>Fiyat</td>
                                    ${compareList.map(item => `<td class="product-price">${item.price}</td>`).join('')}
                                </tr>
                                <tr>
                                    <td>İşlemler</td>
                                    ${compareList.map(item => `
                                        <td>
                                            <a href="${item.url}" class="btn btn-primary btn-sm">Ürüne Git</a>
                                            <button class="btn btn-outline-danger btn-sm" onclick="removeFromCompare(${item.id}); this.closest('.compare-modal-overlay').remove();">Kaldır</button>
                                        </td>
                                    `).join('')}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
        }

        function removeFromFavorites(productId) {
            const favorites = window.favoritesAndCompare.getFavorites();
            const product = favorites.find(item => item.id === productId);
            if (product) {
                window.favoritesAndCompare.toggleFavorite(productId, product);
            }
        }

        function removeFromCompare(productId) {
            const compareList = window.favoritesAndCompare.getCompareList();
            const product = compareList.find(item => item.id === productId);
            if (product) {
                window.favoritesAndCompare.toggleCompare(productId, product);
            }
        }
    </script>

