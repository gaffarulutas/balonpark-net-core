    <script>
        function setCurrency(currency) {
            // API'ye para birimi değişikliği gönder
            fetch('/api/currency/set', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ currency: currency })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelectorAll('.currency-btn').forEach(btn => {
                        btn.classList.remove('bg-gray-500', 'border-gray-500', 'text-white');
                        btn.classList.add('bg-white', 'border-gray-300', 'text-gray-600');
                    });
                    const selectedBtn = document.querySelector(`[data-currency="${currency}"]`);
                    if (selectedBtn) {
                        selectedBtn.classList.remove('bg-white', 'border-gray-300', 'text-gray-600');
                        selectedBtn.classList.add('bg-gray-500', 'border-gray-500', 'text-white');
                    }
                    window.location.reload();
                } else {
                    console.error('Currency değiştirilemedi:', data.message);
                }
            })
            .catch(error => {
                console.error('Currency değiştirilirken hata oluştu:', error);
