        // Toggle subcategories accordion
        function toggleSubCategories(event, categoryId) {
            event.preventDefault();
            event.stopPropagation();
            
            const button = event.currentTarget;
            const subcategoryList = document.getElementById('subcategories-' + categoryId);
            
            if (!subcategoryList) return;
            
            // Toggle active class on button
            button.classList.toggle('active');
            
            // Toggle show class on subcategory list
            subcategoryList.classList.toggle('show');
            
            // Close other open subcategory lists (optional - for accordion behavior)
            const allSubcategoryLists = document.querySelectorAll('.subcategory-list');
            const allToggleButtons = document.querySelectorAll('.category-toggle');
            
            allSubcategoryLists.forEach((list) => {
                if (list.id !== 'subcategories-' + categoryId) {
                    list.classList.remove('show');
                }
            });
            
            allToggleButtons.forEach((btn) => {
                if (btn !== button) {
                    btn.classList.remove('active');
                }
            });
        }

        // Initialize category menu on page load
        $(document).ready(function() {
            // Mark active category and subcategory based on current URL
            const currentPath = window.location.pathname;
            console.log('Current Path:', currentPath);
            
            // Extract category and subcategory slugs from URL
            const pathParts = currentPath.split('/').filter(part => part !== '');
            
            // Check for different URL patterns
            let categorySlug = null;
            let subCategorySlug = null;
            
            // Pattern: /category/{slug} - just category
            if (pathParts[0] === 'category' && pathParts.length === 2) {
                categorySlug = pathParts[1];
            }
            // Pattern: /category/{categorySlug}/{subCategorySlug} - subcategory/products page
            else if (pathParts[0] === 'category' && pathParts.length === 3) {
                categorySlug = pathParts[1];
                subCategorySlug = pathParts[2];
            }
            // Pattern: /category/{categorySlug}/{subCategorySlug}/{productSlug} - product detail
            else if (pathParts[0] === 'category' && pathParts.length === 4) {
                categorySlug = pathParts[1];
                subCategorySlug = pathParts[2];
            }
            
            console.log('Category Slug:', categorySlug);
            console.log('SubCategory Slug:', subCategorySlug);
            
            // Mark active subcategory if we have one
            if (subCategorySlug) {
                $('.subcategory-link').each(function() {
                    const linkCategorySlug = $(this).data('category-slug');
                    const linkSubCategorySlug = $(this).data('subcategory-slug');
                    
                    if (linkCategorySlug === categorySlug && linkSubCategorySlug === subCategorySlug) {
                        console.log('Found active subcategory:', linkSubCategorySlug);
                        
                        // Mark subcategory as active
                        $(this).addClass('active');
                        
                        // Open parent category
                        const subcategoryList = $(this).closest('.subcategory-list');
                        const categoryId = subcategoryList.attr('id').replace('subcategories-', '');
                        const toggleButton = $('.category-toggle[data-category-id="' + categoryId + '"]');
                        
                        subcategoryList.addClass('show');
                        toggleButton.addClass('active');
                        
                        // Mark parent category as active
                        $(this).closest('.category-item').addClass('active');
                    }
                });
            }
            // Mark active category (only if no subcategory)
            else if (categorySlug) {
                $('.category-link').each(function() {
                    const linkCategorySlug = $(this).data('category-slug');
                    
                    if (linkCategorySlug === categorySlug) {
                        console.log('Found active category:', linkCategorySlug);
                        $(this).closest('.category-item').addClass('active');
                    }
                });
            }
        });
    </script>

