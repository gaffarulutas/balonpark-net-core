    <script>
        $(document).ready(function() {
            $('.ui.category.search')
                .search({
                    type: 'category',
                    apiSettings: {
                        url: '/api/search/all?q={query}',
                        onResponse: function(searchResponse) {
                            console.log('Raw API Response:', searchResponse);
                            
                            var response = {
                                results: {}
                            };

                            // Group results by type for Semantic UI Category Search
                            if (searchResponse && searchResponse.results && Array.isArray(searchResponse.results)) {
                                searchResponse.results.forEach(function(item) {
                                    if (item && item.type) {
                                        var typeKey = item.type;
                                        
                                        if (!response.results[typeKey]) {
                                            response.results[typeKey] = {
                                                name: getTypeDisplayName(typeKey),
                                                results: []
                                            };
                                        }
                                        
                                        response.results[typeKey].results.push({
                                            title: item.title || '',
                                            url: item.url || '',
                                            image: item.image || '',
                                            price: item.price || '',
                                            category: item.category || ''
                                        });
                                    }
                                });
                            }

                            console.log('Formatted Response:', response);
                            console.log('Formatted Response Structure:', JSON.stringify(response, null, 2));
                            return response;
                        }
                    },
                    fields: {
                        results: 'results',
                        title: 'title', 
                        url: 'url'
                    },
                    minCharacters: 2,
                    onSelect: function(result, response) {
                        if (result.url) {
                            window.location.href = result.url;
                        }
                    },
                    // Remove custom templates to use Semantic UI defaults
                    // templates: {
                    //     category: function(response, category, html) { ... },
                    //     result: function(result, html) { ... }
                    // }
                });
        });

        function getTypeDisplayName(type) {
            switch(type) {
                case 'product':
                    return 'Ürünler';
                case 'category':
                    return 'Kategoriler';
                case 'subcategory':
                    return 'Alt Kategoriler';
                default:
                    return 'Sonuçlar';
            }
        }

