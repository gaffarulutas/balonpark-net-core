        function toggleSubCategories(event, categoryId) {
            event.preventDefault();
            event.stopPropagation();
            const button = event.currentTarget;
            const subcategoryList = document.getElementById('subcategories-' + categoryId);
            if (!subcategoryList) return;
            const icon = button.querySelector('i');
            const isOpen = subcategoryList.classList.contains('max-h-[1000px]');
            if (isOpen) {
                subcategoryList.classList.remove('max-h-[1000px]', 'opacity-100', 'py-3', 'px-2');
                subcategoryList.classList.add('max-h-0', 'opacity-0');
                button.classList.remove('bg-primary', 'border-primary', 'text-white');
                button.classList.add('bg-gray-100', 'border-gray-200', 'text-gray-500');
                if (icon) icon.classList.remove('rotate-180');
            } else {
                subcategoryList.classList.remove('max-h-0', 'opacity-0');
                subcategoryList.classList.add('max-h-[1000px]', 'opacity-100', 'py-3', 'px-2');
                button.classList.remove('bg-gray-100', 'border-gray-200', 'text-gray-500');
                button.classList.add('bg-primary', 'border-primary', 'text-white');
                if (icon) icon.classList.add('rotate-180');
            }
            document.querySelectorAll('.subcategory-list').forEach(function(list) {
                if (list.id === 'subcategories-' + categoryId) return;
                list.classList.remove('max-h-[1000px]', 'opacity-100', 'py-3', 'px-2');
                list.classList.add('max-h-0', 'opacity-0');
            });
            document.querySelectorAll('.category-toggle').forEach(function(btn) {
                if (btn === button) return;
                btn.classList.remove('bg-primary', 'border-primary', 'text-white');
                btn.classList.add('bg-gray-100', 'border-gray-200', 'text-gray-500');
                var i = btn.querySelector('i');
                if (i) i.classList.remove('rotate-180');
            });
        }

        // Initialize category menu on page load
        $(document).ready(function() {
            // Mark active category and subcategory based on current URL
            const currentPath = window.location.pathname;
            console.log('Current Path:', currentPath);
            
            // Extract category and subcategory slugs from URL
            const pathParts = currentPath.split('/').filter(part => part !== '');
            
            // Check for different URL patterns
            let categorySlug = null;
            let subCategorySlug = null;
            
            // Pattern: /category/{slug} - just category
            if (pathParts[0] === 'category' && pathParts.length === 2) {
                categorySlug = pathParts[1];
            }
            // Pattern: /category/{categorySlug}/{subCategorySlug} - subcategory/products page
            else if (pathParts[0] === 'category' && pathParts.length === 3) {
                categorySlug = pathParts[1];
                subCategorySlug = pathParts[2];
            }
            // Pattern: /category/{categorySlug}/{subCategorySlug}/{productSlug} - product detail
            else if (pathParts[0] === 'category' && pathParts.length === 4) {
                categorySlug = pathParts[1];
                subCategorySlug = pathParts[2];
            }
            
            console.log('Category Slug:', categorySlug);
            console.log('SubCategory Slug:', subCategorySlug);
            
            if (subCategorySlug) {
                $('.subcategory-link').each(function() {
                    if ($(this).data('category-slug') === categorySlug && $(this).data('subcategory-slug') === subCategorySlug) {
                        $(this).addClass('bg-primary/15', 'text-primary', 'font-semibold');
                        var subcategoryList = $(this).closest('.subcategory-list');
                        var categoryId = subcategoryList.attr('id').replace('subcategories-', '');
                        subcategoryList[0].classList.remove('max-h-0', 'opacity-0');
                        subcategoryList[0].classList.add('max-h-[1000px]', 'opacity-100', 'py-3', 'px-2');
                        $('.category-toggle[data-category-id="' + categoryId + '"]').each(function() {
                            this.classList.remove('bg-gray-100', 'border-gray-200', 'text-gray-500');
                            this.classList.add('bg-primary', 'border-primary', 'text-white');
                            var i = this.querySelector('i');
                            if (i) i.classList.add('rotate-180');
                        });
                        $(this).closest('.category-item').addClass('border-primary', 'ring-2', 'ring-primary/10');
                    }
                });
            } else if (categorySlug) {
                $('.category-link').each(function() {
                    if ($(this).data('category-slug') === categorySlug) {
                        $(this).closest('.category-item').addClass('border-primary', 'ring-2', 'ring-primary/10');
                    }
                });
            }
        });
    </script>

