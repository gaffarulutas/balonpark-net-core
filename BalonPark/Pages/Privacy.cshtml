@page "/GizlilikPolitikasi"
@model PrivacyModel
@{
    var settings = ViewData["SiteSettings"] as BalonPark.Models.Settings;
    var companyName = settings?.CompanyName ?? "Balon Park Şişme Oyun Grupları";
    ViewData["Title"] = "Gizlilik Politikası";
    ViewData["Description"] = $"{companyName} gizlilik politikası. Kişisel verilerinizin nasıl toplandığı, işlendiği ve korunduğu hakkında bilgi.";
    ViewData["Keywords"] = "gizlilik politikası, kişisel veriler, veri koruma, balon park, güvenlik";
    ViewData["Image"] = settings?.Logo != null ? (((IUrlService?)ViewData["UrlService"])?.GetImageUrl(settings.Logo) ?? settings.Logo) : (((IUrlService?)ViewData["UrlService"])?.GetImageUrl("/assets/images/logo/logo.png") ?? $"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/assets/images/logo/logo.png");
    var lastUpdated = DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"));
}

<article class="space-y-12 md:space-y-16 pb-10" id="privacy-page-content">
    @await Html.PartialAsync("Shared/_Breadcrumb", new List<BreadcrumbItem>
    {
        BreadcrumbItem.Link("Ana Sayfa", "/"),
        BreadcrumbItem.Current("Gizlilik Politikası")
    })

    <header class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-start">
            <span class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                <i data-lucide="shield" class="w-7 h-7"></i>
            </span>
            <div class="min-w-0 flex-1">
                <h1 class="text-3xl font-bold text-ink sm:text-4xl">Gizlilik Politikası</h1>
                <p class="mt-2 text-lg text-gray-600 leading-relaxed">@companyName olarak kişisel verilerinizin gizliliği ve güvenliği bizim için önemlidir. Bu sayfa, verilerinizin nasıl toplandığı, işlendiği ve korunduğunu açıklar.</p>
                <p class="mt-3 text-sm text-gray-500"><strong>Son Güncelleme:</strong> @lastUpdated</p>
            </div>
        </div>
    </header>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <section aria-labelledby="privacy-responsible-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
            <h2 id="privacy-responsible-heading" class="mb-3 flex items-center gap-3 text-xl font-semibold text-ink">
                <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="shield-check" class="w-5 h-5"></i>
                </span>
                Veri Sorumlusu
            </h2>
            <p class="text-gray-600 leading-relaxed">Kişisel verilerinizin işlenmesinden sorumlu veri sorumlusu @companyName'dır.</p>
        </section>
        <section aria-labelledby="privacy-collected-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
            <h2 id="privacy-collected-heading" class="mb-3 flex items-center gap-3 text-xl font-semibold text-ink">
                <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="database" class="w-5 h-5"></i>
                </span>
                Toplanan Veriler
            </h2>
            <p class="text-gray-600 leading-relaxed">İletişim bilgileri, iletişim geçmişi, web sitesi kullanım bilgileri ve IP adresi gibi kişisel verilerinizi toplayabiliriz.</p>
        </section>
    </div>

    <section aria-labelledby="privacy-purposes-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <h2 id="privacy-purposes-heading" class="mb-4 flex items-center gap-3 text-xl font-semibold text-ink">
            <span class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white" aria-hidden="true">
                <i data-lucide="settings" class="w-5 h-5"></i>
            </span>
            Veri İşleme Amaçları
        </h2>
        <p class="text-gray-600 leading-relaxed">Müşteri hizmetleri, ürün bilgileri sunma, web sitesi performans analizi ve yasal yükümlülükleri yerine getirme amaçlarıyla verilerinizi işliyoruz.</p>
    </section>

    <section aria-labelledby="privacy-rights-heading" class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm md:p-8">
        <h2 id="privacy-rights-heading" class="mb-6 text-center text-xl font-semibold text-ink">Veri Güvenliği ve Haklarınız</h2>
        <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4" role="list">
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="lock" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Veri Güvenliği</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Kişisel verilerinizi güvenli sunucularda saklıyor ve yetkisiz erişimlere karşı koruyoruz.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="share-2" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Veri Paylaşımı</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Verileriniz yasal zorunluluklar dışında üçüncü taraflarla paylaşılmaz.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="cookie" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">Çerezler</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Kullanıcı deneyimini iyileştirmek için çerezler kullanırız. Tarayıcı ayarlarınızdan yönetebilirsiniz.</p>
            </li>
            <li class="rounded-lg border border-gray-100 bg-gray-50/50 p-4 text-center transition-colors hover:bg-gray-50">
                <span class="mx-auto mb-3 flex h-11 w-11 items-center justify-center rounded-full bg-primary/10 text-primary" aria-hidden="true">
                    <i data-lucide="scale" class="w-5 h-5"></i>
                </span>
                <h3 class="font-semibold text-ink mb-1.5">KVKK Hakları</h3>
                <p class="text-sm text-gray-600 leading-relaxed">Verileriniz hakkında bilgi alma, düzeltme ve silme haklarınız bulunmaktadır.</p>
            </li>
        </ul>
    </section>

    <section aria-labelledby="privacy-contact-heading" class="rounded-xl border border-gray-100 bg-white p-6 text-center shadow-sm md:p-8">
        <h2 id="privacy-contact-heading" class="text-xl font-semibold text-ink mb-2">İletişim</h2>
        <p class="text-gray-600 mb-6 max-w-xl mx-auto">Gizlilik politikası veya kişisel verilerinizle ilgili talepleriniz için bizimle iletişime geçebilirsiniz.</p>
        <nav class="flex flex-col flex-wrap items-center justify-center gap-3 sm:flex-row" aria-label="İletişim kanalları">
            @if (!string.IsNullOrEmpty(settings?.WhatsApp))
            {
                var whatsAppDigits = new string(settings.WhatsApp.Where(c => char.IsDigit(c) || c == '+').ToArray());
                <a href="https://wa.me/@whatsAppDigits" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-green-500 text-white font-medium hover:bg-green-600 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="message-circle" class="w-5 h-5" aria-hidden="true"></i>
                    <span>WhatsApp</span>
                </a>
            }
            @if (!string.IsNullOrEmpty(settings?.PhoneNumber))
            {
                var telHref = "tel:" + new string(settings.PhoneNumber.Where(c => char.IsDigit(c) || c == '+').ToArray());
                <a href="@telHref" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                    <i data-lucide="phone" class="w-5 h-5" aria-hidden="true"></i>
                    <span>Telefon</span>
                </a>
            }
            <a asp-page="/Iletisim" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-gray-100 text-ink font-medium hover:bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                <i data-lucide="mail" class="w-5 h-5" aria-hidden="true"></i>
                <span>İletişim Formu</span>
            </a>
        </nav>
    </section>
</article>
