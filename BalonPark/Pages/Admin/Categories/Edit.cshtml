@page
@model BalonPark.Pages.Admin.Categories.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kategori Düzenle";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Kategori Düzenle
            </h1>
            <p class="text-gray-600 mt-2">Kategori bilgilerini güncelleyin</p>
        </div>
        <div class="mt-4 md:mt-0">
            <a href="/admin/categories" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>
</div>

<!-- Form -->
<div class="bg-white rounded-lg shadow-md p-6">
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="hidden" asp-for="Category.CreatedAt" />

        <div class="space-y-6">
            <div>
                <label asp-for="Category.Name" class="block text-sm font-medium text-gray-700 mb-2">
                    Kategori Adı <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="Category.Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Örn: Elektronik">
                <span asp-validation-for="Category.Name" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Category.Description" class="block text-sm font-medium text-gray-700 mb-2">
                    Açıklama
                </label>
                <textarea asp-for="Category.Description" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Kategori hakkında açıklama..."></textarea>
            </div>

            <div class="flex items-center">
                <input type="checkbox" asp-for="Category.IsActive" class="w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-800">
                <label asp-for="Category.IsActive" class="ml-2 block text-sm text-gray-900">
                    Aktif
                </label>
            </div>
        </div>

        <div class="border-t border-gray-200 mt-6 pt-6">
            <div class="flex items-center gap-3">
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-gray-900 text-white font-medium rounded-lg transition-colors duration-200 shadow-md" data-loading-text="Kategori güncelleniyor...">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Güncelle
                </button>
                <a href="/admin/categories" class="inline-flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors duration-200">
                    İptal
                </a>
            </div>
        </div>
    </form>
</div>
