@page
@model BalonPark.Pages.Admin.Categories.CreateModel
@using BalonPark.Models
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yeni Kategori";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Yeni Kategori Ekle
            </h1>
            <p class="text-gray-600 mt-2">Yeni bir kategori oluşturun</p>
        </div>
        <div class="mt-4 md:mt-0">
            <a href="/admin/categories" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>
</div>

<!-- Form -->
<div class="bg-white rounded-lg shadow-md p-6">
    <form method="post">
        <div class="space-y-6">
            <div>
                <label asp-for="Category.Name" class="block text-sm font-medium text-gray-700 mb-2">
                    Kategori Adı <span class="text-red-500">*</span> <span class="text-gray-500 font-normal">(max @Category.NameMaxLength karakter)</span>
                </label>
                <input type="text" asp-for="Category.Name" maxlength="@Category.NameMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Örn: Elektronik">
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Category.NameMaxLength">0 / @Category.NameMaxLength</span>
                <span asp-validation-for="Category.Name" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Category.Description" class="block text-sm font-medium text-gray-700 mb-2">
                    Açıklama <span class="text-gray-500 font-normal">(max @Category.DescriptionMaxLength karakter)</span>
                </label>
                <textarea asp-for="Category.Description" maxlength="@Category.DescriptionMaxLength" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Kategori hakkında açıklama..."></textarea>
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Category.DescriptionMaxLength">0 / @Category.DescriptionMaxLength</span>
            </div>

            <div class="flex items-center">
                <input type="checkbox" asp-for="Category.IsActive" checked class="w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-800">
                <label asp-for="Category.IsActive" class="ml-2 block text-sm text-gray-900">
                    Aktif
                </label>
            </div>
        </div>

        <div class="border-t border-gray-200 mt-6 pt-6">
            <div class="flex items-center gap-3">
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-gray-900 text-white font-medium rounded-lg transition-colors duration-200 shadow-md" data-loading-text="Kategori kaydediliyor...">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                    </svg>
                    Kaydet
                </button>
                <a href="/admin/categories" class="inline-flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors duration-200">
                    İptal
                </a>
            </div>
        </div>
    </form>
</div>
