                                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            }
                            else
                            {
                                <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            }
                            
                            <!-- Page Numbers -->
                            @{
                                var startPage = Math.Max(1, Model.PageNumber - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                                
                                if (startPage > 1)
                                {
                                    <a href="?PageNumber=1@(Model.SelectedCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedCategoryIds.Select(id => $"SelectedCategoryIds={id}")) : "")@(Model.SelectedSubCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedSubCategoryIds.Select(id => $"SelectedSubCategoryIds={id}")) : "")@(!string.IsNullOrEmpty(Model.ProductNameFilter) ? $"&ProductNameFilter={Model.ProductNameFilter}" : "")@(!string.IsNullOrEmpty(Model.ProductIdFilter) ? $"&ProductIdFilter={Model.ProductIdFilter}" : "")" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
