                        <a href="?PageNumber=@(Model.PageNumber + 1)@(Model.SelectedCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedCategoryIds.Select(id => $"SelectedCategoryIds={id}")) : "")@(Model.SelectedSubCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedSubCategoryIds.Select(id => $"SelectedSubCategoryIds={id}")) : "")@(!string.IsNullOrEmpty(Model.ProductNameFilter) ? $"&ProductNameFilter={Model.ProductNameFilter}" : "")@(!string.IsNullOrEmpty(Model.ProductIdFilter) ? $"&ProductIdFilter={Model.ProductIdFilter}" : "")" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Sonraki
