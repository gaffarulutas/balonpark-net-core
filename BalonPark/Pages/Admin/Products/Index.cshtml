                                        <a href="?PageNumber=@i@(Model.SelectedCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedCategoryIds.Select(id => $"SelectedCategoryIds={id}")) : "")@(Model.SelectedSubCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedSubCategoryIds.Select(id => $"SelectedSubCategoryIds={id}")) : "")@(!string.IsNullOrEmpty(Model.ProductNameFilter) ? $"&ProductNameFilter={Model.ProductNameFilter}" : "")@(!string.IsNullOrEmpty(Model.ProductIdFilter) ? $"&ProductIdFilter={Model.ProductIdFilter}" : "")" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                            @i
                                        </a>
                                    }
                                }
                                
                                if (endPage < Model.TotalPages)
                                {
                                    if (endPage < Model.TotalPages - 1)
                                    {
                                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                                    }
                                    <a href="?PageNumber=@Model.TotalPages@(Model.SelectedCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedCategoryIds.Select(id => $"SelectedCategoryIds={id}")) : "")@(Model.SelectedSubCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedSubCategoryIds.Select(id => $"SelectedSubCategoryIds={id}")) : "")@(!string.IsNullOrEmpty(Model.ProductNameFilter) ? $"&ProductNameFilter={Model.ProductNameFilter}" : "")@(!string.IsNullOrEmpty(Model.ProductIdFilter) ? $"&ProductIdFilter={Model.ProductIdFilter}" : "")" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                        @Model.TotalPages
                                    </a>
                                }
                            }
                            
                            <!-- Next Button -->
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <a href="?PageNumber=@(Model.PageNumber + 1)@(Model.SelectedCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedCategoryIds.Select(id => $"SelectedCategoryIds={id}")) : "")@(Model.SelectedSubCategoryIds.Any() ? "&" + string.Join("&", Model.SelectedSubCategoryIds.Select(id => $"SelectedSubCategoryIds={id}")) : "")@(!string.IsNullOrEmpty(Model.ProductNameFilter) ? $"&ProductNameFilter={Model.ProductNameFilter}" : "")@(!string.IsNullOrEmpty(Model.ProductIdFilter) ? $"&ProductIdFilter={Model.ProductIdFilter}" : "")" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            }
                            else
                            {
                                <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            }
                        </nav>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        // Helper functions
        function showSuccessMessage(message) {
            const messageDiv = $('<div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6 rounded-r-lg"><div class="flex items-center"><svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><div><p class="font-semibold text-green-800">İşlem Başarılı</p><p class="text-green-700">' + message + '</p></div></div></div>');
            $('main > div').prepend(messageDiv);
            setTimeout(() => messageDiv.fadeOut(), 5000);
        }
        
        function showErrorMessage(message) {
            const messageDiv = $('<div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-r-lg"><div class="flex items-center"><svg class="w-6 h-6 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg><div><p class="font-semibold text-red-800">Hata</p><p class="text-red-700">' + message + '</p></div></div></div>');
            $('main > div').prepend(messageDiv);
            setTimeout(() => messageDiv.fadeOut(), 8000);
        }
        
        // Auto-hide success messages
        setTimeout(() => { $('.bg-green-50').fadeOut(); }, 5000);
        
        // Custom Select Menu Functions
        function updateSelectText(selectId, checkboxClass, defaultText) {
            const checked = $(`.${checkboxClass}:checked`);
            const $textElement = $(`#${selectId}Text`);
            
            if (checked.length === 0) {
                $textElement.html(`<span class="text-gray-500">${defaultText}</span>`);
            } else if (checked.length === 1) {
                const name = checked.first().closest('label').find('span').first().text();
                $textElement.html(`<span class="text-gray-900">${name}</span>`);
            } else {
                $textElement.html(`
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        ${checked.length} kategori seçildi
                    </span>
                `);
            }
        }
        
        function updateCheckmarks() {
            // Update category checkmarks
            $('.category-checkbox').each(function() {
                const $checkbox = $(this);
                const $label = $checkbox.closest('label');
                const $checkmark = $label.find('.checkmark');
                
                if ($checkbox.is(':checked')) {
                    if ($checkmark.length === 0) {
                        $label.append(`
                            <span class="checkmark">
                                <svg class="h-5 w-5 text-gray-900" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        `);
                    }
                    $label.addClass('bg-indigo-50');
                } else {
                    $checkmark.remove();
                    $label.removeClass('bg-indigo-50');
                }
            });
            
            // Update subcategory checkmarks
            $('.subcategory-checkbox').each(function() {
                const $checkbox = $(this);
                const $label = $checkbox.closest('label');
                const $checkmark = $label.find('.checkmark');
                
                if ($checkbox.is(':checked')) {
                    if ($checkmark.length === 0) {
                        $label.append(`
                            <span class="checkmark">
                                <svg class="h-5 w-5 text-gray-900" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        `);
                    }
                    $label.addClass('bg-indigo-50');
                } else {
                    $checkmark.remove();
                    $label.removeClass('bg-indigo-50');
                }
            });
        }
        
        // Toggle Category Select
        $('#categorySelectBtn').on('click', function(e) {
            e.stopPropagation();
            $('#categorySelectDropdown').toggleClass('hidden');
            $('#subCategorySelectDropdown').addClass('hidden');
        });
        
        // Toggle SubCategory Select
        $('#subCategorySelectBtn').on('click', function(e) {
            e.stopPropagation();
            $('#subCategorySelectDropdown').toggleClass('hidden');
            $('#categorySelectDropdown').addClass('hidden');
        });
        
        // Close dropdowns when clicking outside
        $(document).on('click', function(e) {
            if (!$(e.target).closest('#categorySelectWrapper').length) {
                $('#categorySelectDropdown').addClass('hidden');
            }
            if (!$(e.target).closest('#subCategorySelectWrapper').length) {
                $('#subCategorySelectDropdown').addClass('hidden');
            }
        });
        
        // Close dropdowns with ESC key
        $(document).on('keydown', function(e) {
            if (e.key === 'Escape') {
                $('#categorySelectDropdown').addClass('hidden');
                $('#subCategorySelectDropdown').addClass('hidden');
            }
        });
        
        // Category checkbox change
        $('.category-checkbox').on('change', function() {
            updateSelectText('categorySelect', 'category-checkbox', 'Tüm Kategoriler');
            updateCheckmarks();
            filterSubCategories();
        });
        
        // SubCategory checkbox change
        $('.subcategory-checkbox').on('change', function() {
            updateSelectText('subCategorySelect', 'subcategory-checkbox', 'Tüm Alt Kategoriler');
            updateCheckmarks();
        });
        
        // Filter subcategories based on selected categories
        function filterSubCategories() {
            const selectedCategoryIds = $('.category-checkbox:checked').map(function() {
                return $(this).val();
            }).get();
            
            $('.subcategory-option').each(function() {
                const $option = $(this);
                const categoryId = $option.data('category-id').toString();
                
                if (selectedCategoryIds.length === 0 || selectedCategoryIds.includes(categoryId)) {
                    $option.show();
                } else {
                    $option.hide();
                    // Uncheck hidden subcategories
                    $option.find('.subcategory-checkbox').prop('checked', false);
                }
            });
            
            updateSelectText('subCategorySelect', 'subcategory-checkbox', 'Tüm Alt Kategoriler');
            updateCheckmarks();
        }
        
        // Select All / Clear All buttons
        $('#selectAllCategories').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $('.category-checkbox:visible').prop('checked', true);
            updateSelectText('categorySelect', 'category-checkbox', 'Tüm Kategoriler');
            updateCheckmarks();
            filterSubCategories();
        });
        
        $('#clearCategories').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $('.category-checkbox').prop('checked', false);
            updateSelectText('categorySelect', 'category-checkbox', 'Tüm Kategoriler');
            updateCheckmarks();
            filterSubCategories();
        });
        
        $('#selectAllSubCategories').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $('.subcategory-checkbox:visible').prop('checked', true);
            updateSelectText('subCategorySelect', 'subcategory-checkbox', 'Tüm Alt Kategoriler');
            updateCheckmarks();
        });
        
        $('#clearSubCategories').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $('.subcategory-checkbox').prop('checked', false);
            updateSelectText('subCategorySelect', 'subcategory-checkbox', 'Tüm Alt Kategoriler');
            updateCheckmarks();
        });
        
        // Initialize on page load
        $(document).ready(function() {
            updateSelectText('categorySelect', 'category-checkbox', 'Tüm Kategoriler');
            updateSelectText('subCategorySelect', 'subcategory-checkbox', 'Tüm Alt Kategoriler');
            updateCheckmarks();
            filterSubCategories();
            
            // Apply initial background to checked items
            $('.category-checkbox:checked, .subcategory-checkbox:checked').each(function() {
                $(this).closest('label').addClass('bg-indigo-50');
            });
        });
        
        // PDF Export
        $('#exportPdfBtn').on('click', function() {
            const $btn = $(this);
            const originalHtml = $btn.html();
            
            $btn.prop('disabled', true).html('<svg class="w-5 h-5 mr-2 animate-spin inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> PDF Oluşturuluyor...');
            
            const filterData = {
                SelectedCategoryIds: $('.category-checkbox:checked').map(function() { return $(this).val(); }).get(),
                SelectedSubCategoryIds: $('.subcategory-checkbox:checked').map(function() { return $(this).val(); }).get(),
                ProductNameFilter: $('input[name="ProductNameFilter"]').val() || '',
                ProductIdFilter: $('input[name="ProductIdFilter"]').val() || ''
            };
            
            const queryParams = new URLSearchParams();
            filterData.SelectedCategoryIds.forEach(id => queryParams.append('SelectedCategoryIds', id));
            filterData.SelectedSubCategoryIds.forEach(id => queryParams.append('SelectedSubCategoryIds', id));
            if (filterData.ProductNameFilter) queryParams.append('ProductNameFilter', filterData.ProductNameFilter);
            if (filterData.ProductIdFilter) queryParams.append('ProductIdFilter', filterData.ProductIdFilter);
            
            fetch(`/admin/products?handler=ExportPdf&${queryParams.toString()}`)
                .then(response => response.blob())
                .then(blob => {
                    const link = document.createElement('a');
                    const url = window.URL.createObjectURL(blob);
                    link.href = url;
                    link.download = `Urun_Fiyat_Katalogu_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}.pdf`;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    window.URL.revokeObjectURL(url);
                    showSuccessMessage('PDF başarıyla oluşturuldu ve indirildi!');
                })
                .catch(error => {
                    showErrorMessage('PDF oluşturulurken hata oluştu: ' + error.message);
                })
                .finally(() => {
                    $btn.prop('disabled', false).html(originalHtml);
                });
        });
        
        // Excel Export
        $('#exportExcelBtn').on('click', function() {
            const $btn = $(this);
            const originalHtml = $btn.html();
            
            $btn.prop('disabled', true).html('<svg class="w-5 h-5 mr-2 animate-spin inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Excel Oluşturuluyor...');
            
            const filterData = {
                SelectedCategoryIds: $('.category-checkbox:checked').map(function() { return $(this).val(); }).get(),
                SelectedSubCategoryIds: $('.subcategory-checkbox:checked').map(function() { return $(this).val(); }).get(),
                ProductNameFilter: $('input[name="ProductNameFilter"]').val() || '',
                ProductIdFilter: $('input[name="ProductIdFilter"]').val() || ''
            };
            
            const queryParams = new URLSearchParams();
            filterData.SelectedCategoryIds.forEach(id => queryParams.append('SelectedCategoryIds', id));
            filterData.SelectedSubCategoryIds.forEach(id => queryParams.append('SelectedSubCategoryIds', id));
            if (filterData.ProductNameFilter) queryParams.append('ProductNameFilter', filterData.ProductNameFilter);
            if (filterData.ProductIdFilter) queryParams.append('ProductIdFilter', filterData.ProductIdFilter);
            
            fetch(`/admin/products?handler=ExportExcel&${queryParams.toString()}`)
                .then(response => response.blob())
                .then(blob => {
                    const link = document.createElement('a');
                    const url = window.URL.createObjectURL(blob);
                    link.href = url;
                    link.download = `Urun_Fiyat_Katalogu_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}.xlsx`;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    window.URL.revokeObjectURL(url);
                    showSuccessMessage('Excel dosyası başarıyla oluşturuldu ve indirildi!');
                })
                .catch(error => {
                    showErrorMessage('Excel oluşturulurken hata oluştu: ' + error.message);
                })
                .finally(() => {
                    $btn.prop('disabled', false).html(originalHtml);
                });
        });
        
        // Delete confirmation
        $('.delete-btn').on('click', function() {
            const $btn = $(this);
            const productName = $btn.data('product-name');
            const $form = $btn.closest('.delete-form');
            
            showDeleteConfirm(
                `<strong>${productName}</strong> adlı ürünü silmek istediğinize emin misiniz?<br><br><small class="text-gray-500">Bu işlem geri alınamaz!</small>`,
                function() {
                    showLoading('Ürün siliniyor...');
                    $form.submit();
                }
            );
        });
        
        // Enter key submit
        $('input[name="ProductNameFilter"], input[name="ProductIdFilter"]').on('keypress', function(e) {
            if (e.which === 13) {
                e.preventDefault();
                $('#filterForm').submit();
            }
        });
    </script>
}
