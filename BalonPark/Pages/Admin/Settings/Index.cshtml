@page
@model BalonPark.Pages.Admin.Settings.IndexModel
@using BalonPark.Models
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Genel Ayarlar";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Genel Ayarlar
            </h1>
            <p class="text-gray-600 mt-2">Şirket bilgileri, iletişim ve sosyal medya ayarları</p>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <p class="font-medium">@Model.SuccessMessage</p>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <p class="font-medium">@Model.ErrorMessage</p>
        </div>
    </div>
}

<!-- Form -->
<form method="post">
    <input type="hidden" asp-for="Settings.Id" />
    <input type="hidden" asp-for="Settings.CreatedAt" />
    <input type="hidden" asp-for="Settings.Logo" />

    <!-- Admin Giriş Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Admin Giriş Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.UserName" class="block text-sm font-medium text-gray-700 mb-2">
                    Kullanıcı Adı <span class="text-red-500">*</span> <span class="text-gray-500 font-normal">(max @Settings.UserNameMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.UserName" maxlength="@Settings.UserNameMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.Password" class="block text-sm font-medium text-gray-700 mb-2">
                    Şifre <span class="text-red-500">*</span> <span class="text-gray-500 font-normal">(max @Settings.PasswordMaxLength)</span>
                </label>
                <input type="password" asp-for="Settings.Password" maxlength="@Settings.PasswordMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="Değiştirmek için yeni şifre girin" />
                <p class="text-xs text-gray-500 mt-1">Boş bırakırsanız mevcut şifre korunur</p>
            </div>
        </div>
    </div>

    <!-- Şirket Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Şirket Bilgileri
        </h2>
        <div class="space-y-6">
            <div>
                <label asp-for="Settings.CompanyName" class="block text-sm font-medium text-gray-700 mb-2">
                    Şirket Adı <span class="text-red-500">*</span> <span class="text-gray-500 font-normal">(max @Settings.CompanyNameMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.CompanyName" maxlength="@Settings.CompanyNameMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.CompanyNameMaxLength">@((Model.Settings?.CompanyName ?? "").Length) / @Settings.CompanyNameMaxLength</span>
            </div>
            <div>
                <label asp-for="Settings.About" class="block text-sm font-medium text-gray-700 mb-2">
                    Hakkımızda
                </label>
                <textarea asp-for="Settings.About" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
            </div>
        </div>
    </div>

    <!-- İletişim Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            İletişim Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.Email" class="block text-sm font-medium text-gray-700 mb-2">
                    E-posta <span class="text-red-500">*</span> <span class="text-gray-500 font-normal">(max @Settings.EmailMaxLength)</span>
                </label>
                <input type="email" asp-for="Settings.Email" maxlength="@Settings.EmailMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                    Telefon 1 <span class="text-gray-500 font-normal">(max @Settings.PhoneMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.PhoneNumber" maxlength="@Settings.PhoneMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 212 555 01 23" />
            </div>
            <div>
                <label asp-for="Settings.PhoneNumber2" class="block text-sm font-medium text-gray-700 mb-2">
                    Telefon 2 <span class="text-gray-500 font-normal">(max @Settings.PhoneMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.PhoneNumber2" maxlength="@Settings.PhoneMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 212 555 01 24" />
            </div>
            <div>
                <label asp-for="Settings.Fax" class="block text-sm font-medium text-gray-700 mb-2">
                    Faks <span class="text-gray-500 font-normal">(max @Settings.FaxMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.Fax" maxlength="@Settings.FaxMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.WhatsApp" class="block text-sm font-medium text-gray-700 mb-2">
                    WhatsApp <span class="text-gray-500 font-normal">(max @Settings.PhoneMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.WhatsApp" maxlength="@Settings.PhoneMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 532 555 01 23" />
            </div>
            <div>
                <label asp-for="Settings.WorkingHours" class="block text-sm font-medium text-gray-700 mb-2">
                    Çalışma Saatleri <span class="text-gray-500 font-normal">(max @Settings.WorkingHoursMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.WorkingHours" maxlength="@Settings.WorkingHoursMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="Pazartesi-Cuma: 09:00-18:00" />
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.WorkingHoursMaxLength">@((Model.Settings?.WorkingHours ?? "").Length) / @Settings.WorkingHoursMaxLength</span>
            </div>
        </div>
    </div>

    <!-- Adres Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Adres Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                <label asp-for="Settings.Address" class="block text-sm font-medium text-gray-700 mb-2">
                    Adres <span class="text-gray-500 font-normal">(max @Settings.AddressMaxLength)</span>
                </label>
                <textarea asp-for="Settings.Address" maxlength="@Settings.AddressMaxLength" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.AddressMaxLength">@((Model.Settings?.Address ?? "").Length) / @Settings.AddressMaxLength</span>
            </div>
            <div>
                <label asp-for="Settings.City" class="block text-sm font-medium text-gray-700 mb-2">
                    Şehir <span class="text-gray-500 font-normal">(max @Settings.CityMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.City" maxlength="@Settings.CityMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.District" class="block text-sm font-medium text-gray-700 mb-2">
                    İlçe <span class="text-gray-500 font-normal">(max @Settings.DistrictMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.District" maxlength="@Settings.DistrictMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.PostalCode" class="block text-sm font-medium text-gray-700 mb-2">
                    Posta Kodu <span class="text-gray-500 font-normal">(max @Settings.PostalCodeMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.PostalCode" maxlength="@Settings.PostalCodeMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.Country" class="block text-sm font-medium text-gray-700 mb-2">
                    Ülke <span class="text-gray-500 font-normal">(max @Settings.CountryMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.Country" maxlength="@Settings.CountryMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
        </div>
    </div>

    <!-- Sosyal Medya Hesapları -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Sosyal Medya Hesapları
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.Facebook" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="facebook" class="w-4 h-4 mr-1"></i> Facebook <span class="text-gray-500 font-normal">(max @Settings.SocialUrlMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.Facebook" maxlength="@Settings.SocialUrlMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://facebook.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.Instagram" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="instagram" class="w-4 h-4 mr-1"></i> Instagram <span class="text-gray-500 font-normal">(max @Settings.SocialUrlMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.Instagram" maxlength="@Settings.SocialUrlMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://instagram.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.Twitter" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="twitter" class="w-4 h-4 mr-1"></i> Twitter <span class="text-gray-500 font-normal">(max @Settings.SocialUrlMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.Twitter" maxlength="@Settings.SocialUrlMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://twitter.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.LinkedIn" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="linkedin" class="w-4 h-4 mr-1"></i> LinkedIn <span class="text-gray-500 font-normal">(max @Settings.SocialUrlMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.LinkedIn" maxlength="@Settings.SocialUrlMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://linkedin.com/company/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.YouTube" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="youtube" class="w-4 h-4 mr-1"></i> YouTube <span class="text-gray-500 font-normal">(max @Settings.SocialUrlMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.YouTube" maxlength="@Settings.SocialUrlMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://youtube.com/balonpark" />
            </div>
        </div>
    </div>

    <!-- SEO Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            SEO Bilgileri
        </h2>
        <div class="space-y-6">
            <div>
                <label asp-for="Settings.MetaTitle" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Başlık <span class="text-gray-500 font-normal">(max @Settings.MetaTitleMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.MetaTitle" maxlength="@Settings.MetaTitleMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.MetaTitleMaxLength">@((Model.Settings?.MetaTitle ?? "").Length) / @Settings.MetaTitleMaxLength</span>
                <p class="text-xs text-gray-500 mt-1">Arama motorlarında görünecek başlık (60 karakter önerilir)</p>
            </div>
            <div>
                <label asp-for="Settings.MetaDescription" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Açıklama <span class="text-gray-500 font-normal">(max @Settings.MetaDescriptionMaxLength)</span>
                </label>
                <textarea asp-for="Settings.MetaDescription" maxlength="@Settings.MetaDescriptionMaxLength" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.MetaDescriptionMaxLength">@((Model.Settings?.MetaDescription ?? "").Length) / @Settings.MetaDescriptionMaxLength</span>
                <p class="text-xs text-gray-500 mt-1">Arama motorlarında görünecek açıklama (160 karakter önerilir)</p>
            </div>
            <div>
                <label asp-for="Settings.MetaKeywords" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Anahtar Kelimeler <span class="text-gray-500 font-normal">(max @Settings.MetaKeywordsMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.MetaKeywords" maxlength="@Settings.MetaKeywordsMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
                <span class="char-counter text-sm text-gray-500 mt-1 block" data-max="@Settings.MetaKeywordsMaxLength">@((Model.Settings?.MetaKeywords ?? "").Length) / @Settings.MetaKeywordsMaxLength</span>
                <p class="text-xs text-gray-500 mt-1">Virgülle ayrılmış anahtar kelimeler</p>
            </div>
        </div>
    </div>

    <!-- Google & Doğrulama -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Google Tag & Site Doğrulama
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.GoogleTag" class="block text-sm font-medium text-gray-700 mb-2">
                    Google Tag (gtag.js Ölçüm ID) <span class="text-gray-500 font-normal">(max @Settings.GoogleTagMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.GoogleTag" maxlength="@Settings.GoogleTagMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="G-XXXXXXXXXX" />
                <p class="text-xs text-gray-500 mt-1">Google Analytics 4 ölçüm kimliği. Boş bırakırsanız script yüklenmez.</p>
            </div>
            <div>
                <label asp-for="Settings.GoogleTagManager" class="block text-sm font-medium text-gray-700 mb-2">
                    Google Tag Manager (Container ID) <span class="text-gray-500 font-normal">(max @Settings.GoogleTagManagerMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.GoogleTagManager" maxlength="@Settings.GoogleTagManagerMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="GTM-XXXXXXX" />
                <p class="text-xs text-gray-500 mt-1">GTM container kimliği. Boş bırakırsanız GTM scripti yüklenmez.</p>
            </div>
            <div>
                <label asp-for="Settings.GoogleSiteVerification" class="block text-sm font-medium text-gray-700 mb-2">
                    Google Site Verification <span class="text-gray-500 font-normal">(max @Settings.GoogleSiteVerificationMaxLength)</span>
                </label>
                <input type="text" asp-for="Settings.GoogleSiteVerification" maxlength="@Settings.GoogleSiteVerificationMaxLength" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="Meta content değeri" />
                <p class="text-xs text-gray-500 mt-1">Google Search Console doğrulama meta etiketindeki content değeri.</p>
            </div>
        </div>
    </div>

    <!-- Kaydet Butonu -->
    <div class="bg-white rounded-lg shadow-md p-6">
