@page
@model BalonPark.Pages.Admin.Settings.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Genel Ayarlar";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Genel Ayarlar
            </h1>
            <p class="text-gray-600 mt-2">Şirket bilgileri, iletişim ve sosyal medya ayarları</p>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <p class="font-medium">@Model.SuccessMessage</p>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <p class="font-medium">@Model.ErrorMessage</p>
        </div>
    </div>
}

<!-- Form -->
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Settings.Id" />
    <input type="hidden" asp-for="Settings.CreatedAt" />
    <input type="hidden" asp-for="Settings.Logo" />

    <!-- Admin Giriş Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Admin Giriş Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.UserName" class="block text-sm font-medium text-gray-700 mb-2">
                    Kullanıcı Adı <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="Settings.UserName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.Password" class="block text-sm font-medium text-gray-700 mb-2">
                    Şifre <span class="text-red-500">*</span>
                </label>
                <input type="password" asp-for="Settings.Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="Değiştirmek için yeni şifre girin" />
                <p class="text-xs text-gray-500 mt-1">Boş bırakırsanız mevcut şifre korunur</p>
            </div>
        </div>
    </div>

    <!-- Şirket Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Şirket Bilgileri
        </h2>
        <div class="space-y-6">
            <div>
                <label asp-for="Settings.CompanyName" class="block text-sm font-medium text-gray-700 mb-2">
                    Şirket Adı <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="Settings.CompanyName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.About" class="block text-sm font-medium text-gray-700 mb-2">
                    Hakkımızda
                </label>
                <textarea asp-for="Settings.About" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Logo
                </label>
                
                @if (!string.IsNullOrEmpty(Model.Settings.Logo))
                {
                    <div class="mb-3">
                        <p class="text-sm text-gray-600 mb-2">Mevcut Logo:</p>
                        <img src="@Model.Settings.Logo" alt="Logo" class="lazy-image h-20 object-contain border border-gray-300 rounded p-2 bg-white" loading="lazy" />
                    </div>
                }
                
                <div class="flex items-center gap-3">
                    <label class="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                        <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-sm text-gray-700">Logo Seç</span>
                        <input type="file" asp-for="LogoFile" class="hidden" accept="image/*" onchange="updateFileName(this)" />
                    </label>
                    <span id="logo-file-name" class="text-sm text-gray-500"></span>
                </div>
                <p class="text-xs text-gray-500 mt-2">Yeni logo yüklemek için dosya seçin. Boş bırakırsanız mevcut logo korunur.</p>
            </div>
        </div>
    </div>

    <!-- İletişim Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            İletişim Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.Email" class="block text-sm font-medium text-gray-700 mb-2">
                    E-posta <span class="text-red-500">*</span>
                </label>
                <input type="email" asp-for="Settings.Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                    Telefon 1
                </label>
                <input type="text" asp-for="Settings.PhoneNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 212 555 01 23" />
            </div>
            <div>
                <label asp-for="Settings.PhoneNumber2" class="block text-sm font-medium text-gray-700 mb-2">
                    Telefon 2
                </label>
                <input type="text" asp-for="Settings.PhoneNumber2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 212 555 01 24" />
            </div>
            <div>
                <label asp-for="Settings.Fax" class="block text-sm font-medium text-gray-700 mb-2">
                    Faks
                </label>
                <input type="text" asp-for="Settings.Fax" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.WhatsApp" class="block text-sm font-medium text-gray-700 mb-2">
                    WhatsApp
                </label>
                <input type="text" asp-for="Settings.WhatsApp" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="+90 532 555 01 23" />
            </div>
            <div>
                <label asp-for="Settings.WorkingHours" class="block text-sm font-medium text-gray-700 mb-2">
                    Çalışma Saatleri
                </label>
                <input type="text" asp-for="Settings.WorkingHours" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="Pazartesi-Cuma: 09:00-18:00" />
            </div>
        </div>
    </div>

    <!-- Adres Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Adres Bilgileri
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                <label asp-for="Settings.Address" class="block text-sm font-medium text-gray-700 mb-2">
                    Adres
                </label>
                <textarea asp-for="Settings.Address" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
            </div>
            <div>
                <label asp-for="Settings.City" class="block text-sm font-medium text-gray-700 mb-2">
                    Şehir
                </label>
                <input type="text" asp-for="Settings.City" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.District" class="block text-sm font-medium text-gray-700 mb-2">
                    İlçe
                </label>
                <input type="text" asp-for="Settings.District" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.PostalCode" class="block text-sm font-medium text-gray-700 mb-2">
                    Posta Kodu
                </label>
                <input type="text" asp-for="Settings.PostalCode" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
            <div>
                <label asp-for="Settings.Country" class="block text-sm font-medium text-gray-700 mb-2">
                    Ülke
                </label>
                <input type="text" asp-for="Settings.Country" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
            </div>
        </div>
    </div>

    <!-- Sosyal Medya Hesapları -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Sosyal Medya Hesapları
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Settings.Facebook" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="facebook" class="w-4 h-4 mr-1"></i> Facebook
                </label>
                <input type="text" asp-for="Settings.Facebook" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://facebook.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.Instagram" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="instagram" class="w-4 h-4 mr-1"></i> Instagram
                </label>
                <input type="text" asp-for="Settings.Instagram" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://instagram.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.Twitter" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="twitter" class="w-4 h-4 mr-1"></i> Twitter
                </label>
                <input type="text" asp-for="Settings.Twitter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://twitter.com/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.LinkedIn" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="linkedin" class="w-4 h-4 mr-1"></i> LinkedIn
                </label>
                <input type="text" asp-for="Settings.LinkedIn" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://linkedin.com/company/balonpark" />
            </div>
            <div>
                <label asp-for="Settings.YouTube" class="block text-sm font-medium text-gray-700 mb-2">
                    <i data-lucide="youtube" class="w-4 h-4 mr-1"></i> YouTube
                </label>
                <input type="text" asp-for="Settings.YouTube" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" placeholder="https://youtube.com/balonpark" />
            </div>
        </div>
    </div>

    <!-- SEO Bilgileri -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            SEO Bilgileri
        </h2>
        <div class="space-y-6">
            <div>
                <label asp-for="Settings.MetaTitle" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Başlık
                </label>
                <input type="text" asp-for="Settings.MetaTitle" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
                <p class="text-xs text-gray-500 mt-1">Arama motorlarında görünecek başlık (60 karakter önerilir)</p>
            </div>
            <div>
                <label asp-for="Settings.MetaDescription" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Açıklama
                </label>
                <textarea asp-for="Settings.MetaDescription" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent"></textarea>
                <p class="text-xs text-gray-500 mt-1">Arama motorlarında görünecek açıklama (160 karakter önerilir)</p>
            </div>
            <div>
                <label asp-for="Settings.MetaKeywords" class="block text-sm font-medium text-gray-700 mb-2">
                    Meta Anahtar Kelimeler
                </label>
                <input type="text" asp-for="Settings.MetaKeywords" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent" />
                <p class="text-xs text-gray-500 mt-1">Virgülle ayrılmış anahtar kelimeler</p>
            </div>
        </div>
    </div>

    <!-- Kaydet Butonu -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center gap-3">
            <button type="submit" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white font-medium rounded-lg transition-colors duration-200 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Ayarları Kaydet
            </button>
        </div>
    </div>
</form>

<script>
    function updateFileName(input) {
        const fileNameSpan = document.getElementById('logo-file-name');
        if (input.files && input.files[0]) {
            fileNameSpan.textContent = input.files[0].name;
        } else {
            fileNameSpan.textContent = '';
        }
    }
</script>

