                const response = await fetch('/admin/googleshopping?handler=ViewGoogleProducts', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
