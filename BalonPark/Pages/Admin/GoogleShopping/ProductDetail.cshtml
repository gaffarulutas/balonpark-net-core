@page "/admin/googleshopping/product-detail/{productId}"
@model BalonPark.Pages.Admin.GoogleShopping.ProductDetailModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Google Shopping Ürün Detayı";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Google Shopping Ürün Detayı
            </h1>
            <p class="text-gray-600 mt-2">
                @if (Model.Product != null)
                {
                    @Model.Product.Title
                }
                else
                {
                    <text>Ürün bulunamadı</text>
                }
            </p>
        </div>
        <div class="flex items-center gap-3 mt-4 md:mt-0">
            <div class="w-12 h-12 bg-gray-900 text-white rounded-full flex items-center justify-center text-xl font-bold">
                @Model.AdminUserName.Substring(0, 1).ToUpper()
            </div>
            <div>
                <p class="font-semibold text-gray-800">@Model.AdminUserName</p>
                <p class="text-sm text-gray-500">@Model.AdminEmail</p>
            </div>
        </div>
    </div>
</div>

<!-- Messages -->
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    @if (Model.IsSuccess)
    {
        <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6 rounded-r-lg">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <p class="font-semibold text-green-800">Başarılı!</p>
                    <p class="text-green-700">@Model.StatusMessage</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-r-lg">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <p class="font-semibold text-red-800">Hata!</p>
                    <p class="text-red-700">@Model.StatusMessage</p>
                </div>
            </div>
        </div>
    }
}

@if (Model.Product != null)
{
    <!-- Product Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Basic Info -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Temel Bilgiler
            </h3>
            
            <dl class="space-y-3">
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Ürün ID</dt>
                    <dd class="text-sm"><code class="px-2 py-1 bg-gray-100 rounded">@Model.Product.Id</code></dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Offer ID</dt>
                    <dd class="text-sm"><code class="px-2 py-1 bg-gray-100 rounded">@Model.Product.OfferId</code></dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Başlık</dt>
                    <dd class="text-sm font-semibold text-gray-900">@Html.Raw(Model.Product.Title)</dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Marka</dt>
                    <dd class="text-sm text-gray-900">@Model.Product.Brand</dd>
                </div>
                <div class="flex justify-between py-2">
                    <dt class="text-sm font-medium text-gray-600">Durum</dt>
                    <dd>
                        @if (Model.Product.Availability == "in stock")
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Stokta
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                Stok Yok
                            </span>
                        }
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Price & Category -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Fiyat ve Kategori
            </h3>
            
            <dl class="space-y-3">
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Fiyat</dt>
                    <dd class="text-2xl font-bold text-green-600">
                        @Model.Product.Price.ToString("N2", System.Globalization.CultureInfo.InvariantCulture) @Model.Product.Currency
                    </dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Para Birimi</dt>
                    <dd class="text-sm text-gray-900">@Model.Product.Currency</dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Kategori</dt>
                    <dd><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">@Model.Product.CustomLabel0</span></dd>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Alt Kategori</dt>
                    <dd><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@Model.Product.CustomLabel1</span></dd>
                </div>
                <div class="flex justify-between py-2">
                    <dt class="text-sm font-medium text-gray-600">Durum</dt>
                    <dd class="text-sm text-gray-900">@Model.Product.Condition</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Description -->
    @if (!string.IsNullOrEmpty(Model.Product.Description))
    {
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Ürün Açıklaması
            </h3>
            <p class="text-gray-700 leading-relaxed">@Model.Product.Description</p>
        </div>
    }

    <!-- Technical Info -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Teknik Bilgiler
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Google Info -->
            <div>
                <h4 class="text-lg font-semibold text-gray-700 mb-3">Google Bilgileri</h4>
                <dl class="space-y-2">
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">GTIN</dt>
                        <dd><code class="px-2 py-1 bg-gray-100 rounded text-sm">@Model.Product.Gtin</code></dd>
                    </div>
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">MPN</dt>
                        <dd><code class="px-2 py-1 bg-gray-100 rounded text-sm">@Model.Product.Mpn</code></dd>
                    </div>
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">Google Kategori</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.GoogleProductCategory</dd>
                    </div>
                    <div class="flex justify-between py-2">
                        <dt class="text-sm font-medium text-gray-600">Ürün Tipi</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.ProductType</dd>
                    </div>
                </dl>
            </div>

            <!-- Additional Info -->
            <div>
                <h4 class="text-lg font-semibold text-gray-700 mb-3">Ek Bilgiler</h4>
                <dl class="space-y-2">
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">Dil</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.ContentLanguage</dd>
                    </div>
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">Hedef Ülke</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.TargetCountry</dd>
                    </div>
                    <div class="flex justify-between py-2 border-b border-gray-100">
                        <dt class="text-sm font-medium text-gray-600">Yaş Grubu</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.AgeGroup</dd>
                    </div>
                    <div class="flex justify-between py-2">
                        <dt class="text-sm font-medium text-gray-600">Cinsiyet</dt>
                        <dd class="text-sm text-gray-900">@Model.Product.Gender</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    <!-- Links -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            Bağlantılar
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Ürün Linki</label>
                <div class="flex">
                    <input type="text" value="@Model.Product.Link" readonly class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg bg-gray-50 text-sm">
                    <button onclick="copyToClipboard('@Model.Product.Link')" class="px-4 py-2 bg-gray-900 hover:bg-gray-900 text-white rounded-r-lg transition-colors duration-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Resim Linki</label>
                <div class="flex">
                    <input type="text" value="@Model.Product.ImageLink" readonly class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg bg-gray-50 text-sm">
                    <button onclick="copyToClipboard('@Model.Product.ImageLink')" class="px-4 py-2 bg-gray-900 hover:bg-gray-900 text-white rounded-r-lg transition-colors duration-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Images -->
    @if (!string.IsNullOrEmpty(Model.Product.ImageLink))
    {
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Ürün Resimleri
            </h3>
            
            <!-- Main Image -->
            <div class="mb-6">
                <h4 class="text-lg font-medium text-gray-700 mb-3">Ana Resim</h4>
                <div class="bg-gray-50 rounded-lg p-6 text-center">
                    <img src="@Model.Product.ImageLink" alt="@Model.Product.Title" 
                         class="lazy-image max-w-md max-h-96 mx-auto rounded-lg shadow-lg object-contain" loading="lazy">
                </div>
            </div>
            
            <!-- Additional Images -->
            @if (Model.Product.AdditionalImageLinks?.Any() == true)
            {
                <div>
                    <h4 class="text-lg font-medium text-gray-700 mb-3">Ek Resimler (@Model.Product.AdditionalImageLinks.Count)</h4>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        @foreach (var imageUrl in Model.Product.AdditionalImageLinks)
                        {
                            <div class="bg-gray-50 rounded-lg p-3 hover:shadow-md transition-shadow duration-200">
                                <img src="@imageUrl" alt="@Model.Product.Title" 
                                     class="lazy-image w-full h-48 object-cover rounded-md" loading="lazy">
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-r-lg">
                    <p class="text-sm text-blue-700 flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Bu ürün için ek resim bulunmuyor.
                    </p>
                </div>
            }
        </div>
    }

    <!-- Action Buttons -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex flex-wrap gap-3">
            <button type="button" onclick="editProduct()" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Düzenle
            </button>
            
            <button type="button" onclick="refreshProduct()" class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Yenile
            </button>
            
            <button type="button" onclick="openProductLink()" class="inline-flex items-center px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Ürünü Görüntüle
            </button>
            
            <button type="button" onclick="deleteProduct()" class="inline-flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Sil
            </button>
            
            <a href="/admin/googleshopping" class="inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>
}
else
{
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="mx-auto w-20 h-20 text-red-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-2xl font-semibold text-gray-700 mb-2">Ürün Bulunamadı</h3>
        <p class="text-gray-500 mb-6">Belirtilen ürün ID'si bulunamadı: <code class="px-2 py-1 bg-gray-100 rounded">@Model.ProductId</code></p>
        <a href="/admin/googleshopping" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-gray-900 text-white font-medium rounded-lg transition-colors duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Google Shopping'a Dön
        </a>
    </div>
}

<!-- Anti-forgery Token -->
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        function editProduct() {
            window.open('/admin/googleshopping/update-product/@Model.ProductId', '_blank');
        }

        function refreshProduct() {
            location.reload();
        }

        function openProductLink() {
            if ('@Model.Product?.Link' !== '') {
                window.open('@Model.Product?.Link', '_blank');
            }
        }
        
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                if (typeof showSnackbar === 'function') showSnackbar('Link panoya kopyalandı', 'success');
                else if (typeof showSuccessAlert === 'function') showSuccessAlert('Link panoya kopyalandı');
            });
        }

        function deleteProduct() {
            if (!confirm('Bu ürünü Google Shopping\'dan silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')) return;

            showLoading('Ürün siliniyor...');
            fetch('/admin/googleshopping?handler=DeleteProduct&productId=@Model.ProductId', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                hideLoading();
                if (data.success) {
                    if (typeof showSuccessAlert === 'function') showSuccessAlert('Ürün başarıyla silindi!');
                    window.location.href = '/admin/googleshopping';
                } else {
                    if (typeof showErrorAlert === 'function') showErrorAlert('Ürün silinemedi: ' + data.message);
                }
            })
            .catch(error => {
                hideLoading();
                if (typeof showErrorAlert === 'function') showErrorAlert('Bir hata oluştu: ' + error.message);
            });
        }
    </script>
}
