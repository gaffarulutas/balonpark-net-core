@page
@model BalonPark.Pages.Admin.CacheTestModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Cache Test";
    ViewData["AdminUserName"] = Model.AdminUserName;
    ViewData["AdminEmail"] = Model.AdminEmail;
    ViewData["LowStockCount"] = 0;
}

<!-- Page Header -->
<div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Cache Test</h1>
    <p class="mt-1 text-sm text-gray-500">
        Memory cache performansını test edin ve yönetin
    </p>
</div>

<!-- Cache Statistics -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-6">
    <!-- Cache Hit -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">Cache Hit</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">@Model.CacheHitCount</div>
                            <div class="ml-2 flex items-baseline text-sm font-semibold text-green-600">
                                / @Model.TotalRequests
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm text-gray-500">
                Cache'den başarılı okuma
            </div>
        </div>
    </div>
    
    <!-- Cache Miss -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    @if (Model.CacheMissCount > 3)
                    {
                        <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">Cache Miss</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">@Model.CacheMissCount</div>
                            <div class="ml-2 flex items-baseline text-sm font-semibold @(Model.CacheMissCount > 3 ? "text-red-600" : "text-yellow-600")">
                                DB sorgusu
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm text-gray-500">
                Veritabanından okuma
            </div>
        </div>
    </div>
    
    <!-- Performance -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">Performans Artışı</dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">%@Model.PerformanceImprovement.ToString("F1")</div>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <span class="text-gray-500">İlk: </span><span class="font-medium text-gray-900">@Model.FirstLoadTime ms</span>
                <span class="text-gray-500 ml-3">İkinci: </span><span class="font-medium text-gray-900">@Model.SecondLoadTime ms</span>
            </div>
        </div>
    </div>
</div>

<!-- Test Results -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        Test Sonuçları
    </h3>
    
    <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-orange-100 rounded-lg">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="font-semibold text-gray-800">İlk Yükleme (Cache Miss)</p>
                    <p class="text-sm text-gray-600">Veritabanından veri çekildi</p>
                </div>
            </div>
            <span class="text-2xl font-bold text-orange-600">@Model.FirstLoadTime ms</span>
        </div>
        
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-green-100 rounded-lg">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div>
                    <p class="font-semibold text-gray-800">İkinci Yükleme (Cache Hit)</p>
                    <p class="text-sm text-gray-600">Cache'den veri alındı</p>
                </div>
            </div>
            <span class="text-2xl font-bold text-green-600">@Model.SecondLoadTime ms</span>
        </div>
        
        <div class="flex items-center justify-between p-4 bg-indigo-50 rounded-lg border-2 border-indigo-200">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-gray-100 rounded-lg">
                    <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                </div>
                <div>
                    <p class="font-semibold text-gray-800">Performans Artışı</p>
                    <p class="text-sm text-gray-600">Cache kullanımı ile kazanç</p>
                </div>
            </div>
            <span class="text-3xl font-bold text-gray-900">@Model.PerformanceImprovement%</span>
        </div>
    </div>
</div>

<!-- Cache Actions -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
    <h3 class="text-base font-semibold text-gray-900 mb-4">Cache İşlemleri</h3>
    
    <form method="post">
        <div class="flex flex-wrap gap-3">
            <button type="submit" name="action" value="test" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Cache Test Et
            </button>
            
            <button type="submit" name="action" value="clear" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Cache Temizle
            </button>
            
            <button type="submit" name="action" value="load" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Cache Yükle
            </button>
            
            <button type="submit" name="action" value="settingstest" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Settings Test Et
            </button>
        </div>
    </form>
</div>

<!-- Settings Info -->
@if (Model.CurrentSettings != null)
{
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings Veritabanı Bilgileri
            @if (!string.IsNullOrEmpty(Model.SettingsTestMessage))
            {
                <span class="ml-2 text-sm font-normal text-gray-600">@Model.SettingsTestMessage</span>
            }
        </h3>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Company Name</p>
                <p class="font-medium text-gray-900">@(Model.CurrentSettings.CompanyName ?? "❌ Boş")</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Meta Title</p>
                <p class="font-medium text-gray-900">@(Model.CurrentSettings.MetaTitle ?? "❌ Boş")</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Logo</p>
                <p class="font-medium text-gray-900 break-all">@(Model.CurrentSettings.Logo ?? "❌ Boş")</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Email</p>
                <p class="font-medium text-gray-900">@(Model.CurrentSettings.Email ?? "❌ Boş")</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Phone</p>
                <p class="font-medium text-gray-900">@(Model.CurrentSettings.PhoneNumber ?? "❌ Boş")</p>
            </div>
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Meta Description</p>
                <p class="font-medium text-gray-900 text-xs truncate">@(Model.CurrentSettings.MetaDescription ?? "❌ Boş")</p>
            </div>
        </div>
    </div>
}

<!-- Info Message -->
@if (Model.CacheMissCount > 3)
{
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r-lg">
        <div class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
                <p class="font-semibold text-yellow-800">Cache Çalışmıyor</p>
                <p class="text-yellow-700 text-sm mt-1">
                    Cache Miss sayısı yüksek (@Model.CacheMissCount). Cache'i yüklemek için "Cache Yükle" butonuna tıklayın.
                </p>
            </div>
        </div>
    </div>
}

<!-- Explanation -->
<div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-base font-semibold text-gray-900 mb-3">Cache Nasıl Çalışır?</h3>
    <div class="space-y-3 text-sm text-gray-600">
        <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p><strong>Cache Hit:</strong> Veri memory cache'de bulundu ve hızlıca döndürüldü (veritabanı sorgusu yok)</p>
        </div>
        <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <p><strong>Cache Miss:</strong> Veri cache'de bulunamadı, veritabanından çekildi ve cache'e yazıldı</p>
        </div>
        <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p><strong>Süre:</strong> Cache otomatik olarak 30 dakika sonra temizlenir</p>
        </div>
    </div>
</div>
