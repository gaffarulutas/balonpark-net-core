@page
@model BalonPark.Pages.Admin.Blogs.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog Yazısını Düzenle";
}

<!-- Header -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Blog Yazısını Düzenle
            </h1>
            <p class="text-gray-600 mt-2">@Html.Raw(Model.Blog?.Title)</p>
        </div>
        <div class="flex gap-2 mt-4 md:mt-0">
            <a href="/blog/@Model.Blog?.Slug" target="_blank" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                Görüntüle
            </a>
            <a href="/Admin/Blogs" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>
</div>

<!-- Messages -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6 rounded-r-lg">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <p class="font-semibold text-green-800">Başarılı!</p>
                <p class="text-green-700">@Model.SuccessMessage</p>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-r-lg">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <p class="font-semibold text-red-800">Hata!</p>
                <p class="text-red-700">@Model.ErrorMessage</p>
            </div>
        </div>
    </div>
}

<!-- Blog Statistics -->
@if (Model.Blog != null)
{
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-lg p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Görüntülenme</p>
                    <p class="text-3xl font-bold mt-2">@Model.Blog.ViewCount</p>
                </div>
                <svg class="w-12 h-12 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
            </div>
        </div>
        
        <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-100 text-sm font-medium">Oluşturulma</p>
                    <p class="text-xl font-bold mt-2">@Model.Blog.CreatedAt.ToString("dd.MM.yyyy")</p>
                </div>
                <svg class="w-12 h-12 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
        </div>
        
        <div class="bg-gradient-to-br from-gray-700 to-gray-800 rounded-lg shadow-lg p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-100 text-sm font-medium">Son Güncelleme</p>
                    <p class="text-xl font-bold mt-2">@(Model.Blog.UpdatedAt?.ToString("dd.MM.yyyy") ?? "-")</p>
                </div>
                <svg class="w-12 h-12 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
            </div>
        </div>
    </div>
}

<!-- Form -->
<div class="bg-white rounded-lg shadow-md p-6">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Blog.Id" />
        <input type="hidden" asp-for="Blog.CreatedAt" />
        <input type="hidden" asp-for="Blog.ViewCount" />
        <input type="hidden" asp-for="Blog.Slug" />
        <input type="hidden" asp-for="Blog.MetaTitle" />
        <input type="hidden" asp-for="Blog.MetaDescription" />
        <input type="hidden" asp-for="Blog.MetaKeywords" />
        <input type="hidden" asp-for="Blog.PublishedAt" />

        <div class="space-y-6">
            <!-- Title and Category -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Blog.Title" class="block text-sm font-medium text-gray-700 mb-2">
                        Başlık <span class="text-red-500">*</span>
                    </label>
                    <input type="text" asp-for="Blog.Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Blog yazısının başlığını girin">
                    <span asp-validation-for="Blog.Title" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Blog.Category" class="block text-sm font-medium text-gray-700 mb-2">Kategori</label>
                    <input type="text" asp-for="Blog.Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Örn: Teknoloji, Yaşam, Eğitim">
                </div>
            </div>

            <!-- Excerpt -->
            <div>
                <label asp-for="Blog.Excerpt" class="block text-sm font-medium text-gray-700 mb-2">
                    Özet <span class="text-red-500">*</span>
                </label>
                <textarea asp-for="Blog.Excerpt" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Blog yazısının kısa özeti..."></textarea>
                <small class="text-gray-500 text-sm mt-1 block">Bu özet blog listesinde ve sosyal medyada görünecek</small>
                <span asp-validation-for="Blog.Excerpt" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <!-- Content (CKEditor) -->
            <div>
                <label asp-for="Blog.Content" class="block text-sm font-medium text-gray-700 mb-2">
                    İçerik <span class="text-red-500">*</span>
                </label>
                <textarea asp-for="Blog.Content" id="contentEditor" rows="15" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200"></textarea>
                <span asp-validation-for="Blog.Content" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <!-- Featured Image -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Blog Resmi</label>
                
                @if (!string.IsNullOrEmpty(Model.Blog?.FeaturedImage))
                {
                    <div class="mb-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                        <p class="text-sm font-medium text-gray-700 mb-2">Mevcut Resim:</p>
                        <img src="@Model.Blog.FeaturedImage" class="lazy-image w-40 h-40 object-cover rounded-lg shadow-md" alt="Mevcut resim" loading="lazy" />
                    </div>
                }
                
                <div class="flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-indigo-400 transition-colors duration-200">
                    <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="flex text-sm text-gray-600">
                            <label class="relative cursor-pointer bg-white rounded-md font-medium text-gray-900 hover:text-gray-800">
                                <span>Yeni resim yükle</span>
                                <input type="file" name="FeaturedImageFile" accept="image/*" class="sr-only">
                            </label>
                        </div>
                        <p class="text-xs text-gray-500">PNG, JPG formatında</p>
                    </div>
                </div>
            </div>

            <!-- Author -->
            <div>
                <label asp-for="Blog.AuthorName" class="block text-sm font-medium text-gray-700 mb-2">Yazar Adı</label>
                <input type="text" asp-for="Blog.AuthorName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-800 focus:border-transparent transition-all duration-200" placeholder="Yazar adı">
            </div>

            <!-- Checkboxes -->
            <div class="space-y-3">
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input type="checkbox" asp-for="Blog.IsActive" class="w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-800">
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Blog.IsActive" class="font-medium text-gray-900">Aktif</label>
                        <p class="text-gray-500">Blog yazısı aktif olarak yayınlanacak</p>
                    </div>
                </div>
                
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input type="checkbox" asp-for="Blog.IsFeatured" class="w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-800">
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Blog.IsFeatured" class="font-medium text-gray-900">Öne Çıkan</label>
                        <p class="text-gray-500">Blog yazısı öne çıkan olarak işaretlenecek</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Buttons -->
        <div class="border-t border-gray-200 mt-8 pt-6">
            <div class="flex items-center gap-3">
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gray-900 hover:bg-gray-900 text-white font-medium rounded-lg transition-colors duration-200 shadow-md" data-loading-text="Blog güncelleniyor...">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Güncelle
                </button>
                <a href="/Admin/Blogs" class="inline-flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors duration-200">
                    İptal
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <!-- CKEditor CDN -->
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>

    <script>
        // CKEditor initialization
        let editor;
        ClassicEditor
            .create(document.querySelector('#contentEditor'), {
                toolbar: {
                    items: [
                        'heading', '|',
                        'bold', 'italic', 'underline', 'strikethrough', '|',
                        'bulletedList', 'numberedList', '|',
                        'outdent', 'indent', '|',
                        'link', 'blockQuote', 'insertTable', '|',
                        'undo', 'redo'
                    ]
                },
                language: 'tr',
                placeholder: 'Blog içeriğini buraya yazın...',
                table: {
                    contentToolbar: [
                        'tableColumn',
                        'tableRow',
                        'mergeTableCells'
                    ]
                }
            })
            .then(editorInstance => {
                editor = editorInstance;
            })
            .catch(error => {
                console.error('CKEditor yüklenirken hata oluştu:', error);
            });

        // Form submit
        $('form').on('submit', function() {
            if (editor) {
                editor.updateSourceElement();
            }
        });
        
        // Auto-hide messages
        setTimeout(() => {
            $('.bg-green-50, .bg-red-50').fadeOut();
        }, 5000);
        
        // File upload preview
        $('input[type="file"]').on('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                $(this).siblings('label').find('span').text(file.name);
            }
        });
    </script>
}
